<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="openide/loaders unit test config">
    <testbag testattribs="stable" executor="code" name="all openide code unit tests">
        <testset dir="">
            <patternset>
                <include name="org/openide/**/*Test.class"/>
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="empty" executor="code" name="no tests">
        <testset dir="">
            <patternset>
            </patternset>
        </testset>
    </testbag>
    
    <executor name="code" antfile="build-unit.xml" target="run-unit-test"/>
    <compiler name="unit-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    
</mconfig>
