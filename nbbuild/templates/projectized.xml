    -->

    <target name="clean" depends="files-init">
        <delete dir="build"/>
        <delete dir="javadoc"/>
        <delete>
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
                <patternset refid="module.files"/>
            </fileset>
        </delete>
        <delete file="${netbeans.dest.dir}/${cluster.dir}/update_tracking/${code.name.base.dashes}.xml"/>
    </target>

</project>
