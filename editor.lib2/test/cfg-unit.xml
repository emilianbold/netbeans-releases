<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="editor/lib2 unit test config">
    
    <testbag testattribs="stable" executor="code" name="testbag_1">
        <testset dir="unit/src">
            <patternset>
                <include name="**/**Test.class"/>
                <exclude name="org/netbeans/spi/editor/highlighting/performance/**"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="stable,perf" executor="code" name="testbag_perf">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/spi/editor/highlighting/performance/**Test.class"/>
                <exclude name="org/netbeans/spi/editor/highlighting/performance/HighlightsBagFindHighlightTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="stable,perf,noJIT" executor="code-noJIT" name="testbag_perf_noJIT">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/spi/editor/highlighting/performance/PositionsBagFindHighlightTest.class"/>
                <include name="org/netbeans/spi/editor/highlighting/performance/SyntaxHighlightingTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="failing" executor="code" name="testbag_2">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/spi/editor/lib2/highlighting/HighlightsBagPerformanceTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- If you want to use this testbag you *must* provide xtest.includes property, -->
    <!-- (either on cmd line or in the script) to explicitly define which test       -->
    <!-- you want to run. This will run *only* tests from unit/src folder !!!        -->
    <testbag testattribs="empty" executor="code" name="testbag_empty">
        <testset dir="unit/src"/>
    </testbag>

    <executor name="code" antfile="build.xml" target="run-unit-test" default="true"/>
    <executor name="code-noJIT" antfile="build.xml" target="run-unit-test-noJIT" />
    
    <compiler name="unit-compiler" antfile="build.xml" target="default-compiler" default="true"/>
    
</mconfig>
