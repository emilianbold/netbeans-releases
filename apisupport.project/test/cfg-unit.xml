<mconfig name="apisupport/project">
    <testbag testattribs="stable" executor="unit-executor" name="apisupport/project">
        <testset dir="unit/src">
            <patternset>
                <include name="**/*Test.class"/>
                <!-- Elaborate. Very slow, sometime seems to end in endless
                wait-for-condition cycle. Also read through #87973. -->
                <exclude name="**/ServiceNodeHandlerTest.class"/>
                <!-- XXX #107995: random failures -->
                <exclude name="**/SuiteCustomizerModuleListTest.class"/>
                <!-- XXX Following test might need source repository. Double check them: -->
                <exclude name="**/BrandingSupportTest.class"/>
                <exclude name="**/GlobalSourceForBinaryImplTest.class"/>
                <exclude name="**/LayerUtilsTest.class"/>
                <exclude name="**/ModuleActionsTest.class"/>
                <exclude name="**/ModuleLogicalViewTest.class"/>
                <exclude name="**/NbPlatformTest.class"/>
                <exclude name="**/WritableXMLFileSystemTest.class"/>
                <!-- Tests which very likely needs access to nb.org sources: -->
                <exclude name="**/AccessibilityQueryImplTest.class"/>
                <exclude name="**/AntArtifactProviderImplTest.class"/>
                <exclude name="**/AvoidModuleListInProjectConstructorTest.class"/>
                <exclude name="**/ClassPathProviderImplTest.class"/>
                <exclude name="**/EvaluatorTest.class"/>
                <exclude name="**/JavadocForBinaryImplTest.class"/>
                <exclude name="**/ModuleListTest.class"/>
                <exclude name="**/NbModuleProjectTest.class"/>
                <exclude name="**/NbModuleProviderTest.class"/>
                <exclude name="**/ProjectXMLManagerTest.class"/>
                <exclude name="**/SingleModulePropertiesTest.class"/>
                <exclude name="**/SourceForBinaryImplTest.class"/>
                <exclude name="**/SourceLevelQueryImplTest.class"/>
                <exclude name="**/SubprojectProviderImplTest.class"/>
                <exclude name="**/TestBuildCleanTest.class"/>
                <exclude name="**/TestEntryTest.class"/>
                <exclude name="**/UnitTestForSourceQueryImplTest.class"/>
                <exclude name="**/UpdateTrackingFileOwnerQueryTest.class"/>
                <exclude name="**/UtilTest.class"/>
                <!-- Tests which definitely needs access to nb.org sources: -->
                <!-- Move above test into this section once they are checked for real need of presence of source tree. -->
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="stable-sources" executor="unit-executor" name="apisupport/project">
        <testset dir="unit/src">
            <patternset>
                <include name="**/*Test.class"/>
                <!-- Too slow in the absence of input: -->
                <exclude name="**/GenerateJNLPApplicationTest.class"/>
                <!-- Too slow  -->
                <exclude name="**/ServiceNodeHandlerTest.class"/>
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="empty" executor="unit-executor" name="apisupport/project">
        <testset dir="unit/src">
        </testset>
    </testbag>
    <compiler name="default-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    <executor name="unit-executor" antfile="build-unit.xml" target="run-unit-test"/>
</mconfig>
