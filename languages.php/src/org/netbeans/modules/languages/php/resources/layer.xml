<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.1//EN" "http://www.netbeans.org/dtds/filesystem-1_1.dtd">
<filesystem>
    <folder name="Services">
        <folder name="MIMEResolver">
            <!-- TODO: one need to write MimeLookup in the way of recognizing php
                files respectively Project PHP version property.
                F.e. files with ".php" extension should be considered as
                php script verion 5 or 4 based on project type. If project 
                was created with version 4 then ".php" extension should interpreted
                as version 4 PHP script -->
            <file name="PHP.xml" url="PHP.xml">
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.languages.php.resources.Bundle"/>
                <attr name="position" intvalue="282"/>
            </file>
            <!--file name="PHP4.xml" url="PHP4.xml">
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.languages.php.resources.Bundle"/>
            </file-->
        </folder>
        <!--folder name="IndentEngine">
            <file name="org-netbeans-modules-php-editor-PhpIndentEngine.settings" url="PhpIndentEngine.settings">
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.editor.Bundle"/>
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/editor/resources/indentEngine.gif"/>
            </file>
        </folder-->
    </folder>
    
    <folder name="Navigator">
        <folder name="Panels">
            <folder name="text">
                <folder name="x-php5">
                    <file name="org-netbeans-modules-languages-features-LanguagesNavigator.instance"/>
                </folder>
            </folder>
        </folder>
    </folder>
    
    <folder name="Editors">
        <folder name="text">
            <folder name="x-php5">
            	<folder name="FontsColors">
    				<folder name="NetBeans">
        				<folder name="Defaults">
            				<file name="FontAndColors.xml" url="DefaultsColors.xml">
                				<attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.languages.php.resources.Bundle"/>
			            	</file>
        				</folder>
    				</folder>
		    	</folder>
                <file name="language.instance">
                    <attr name="instanceCreate" methodvalue="org.netbeans.modules.php.lexer.PhpTokenId.language"/>
                    <attr name="instanceOf" stringvalue="org.netbeans.api.lexer.Language"/>
                </file>
                <attr name="createDataObject" boolvalue="false"/>
                <file name="language.nbs" url="PHP.nbs"/>
<!--                <file name="org-netbeans-modules-php-editor-formatting-TopLevelPHPIndentTaskFactory.instance"/>-->
                <file name="Settings.settings" url="PhpOptions.settings"/>
                <file name="EditorKit.instance">
                    <attr name="instanceClass" stringvalue="org.netbeans.modules.php.editor.PhpKit"/>
                </file>
                <file name="org.netbeans.modules.languages.php.HighlightFactory.instance"/>
                <folder name="CompletionProviders">
                    <file name="org-netbeans-modules-editor-html-HTMLCompletionProvider.instance"/>
                </folder>
                <folder name="FoldManager">
                    <file name="org-netbeans-modules-languages-features-LanguagesFoldManager$Factory.instance"/>
                </folder>
                <folder name="CodeTemplates">
                    <folder name="Defaults">
                        <file name="codetemplates.xml" url="codetemplates.xml">
                            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.languages.php.resources.Bundle"/>
                        </file>
                    </folder>
                </folder>
            </folder>
            <!--folder name="x-php4">
                <file name="language.nbs" url="PHP4.nbs"/>
            </folder-->
            <folder name="x-pure-php5">
                <attr name="createDataObject" boolvalue="false"/>
                <file name="language.nbs" url="purePHP5.nbs">
                    <attr name="icon" stringvalue="org/netbeans/modules/languages/php/resources/php.png"/>
                </file>
                <file name="org-netbeans-modules-php-editor-formatting-EmbeddedPHPIndentTaskFactory.instance"/>
                <file name="Settings.settings" url="LanguagesOptions.settings"/>
            </folder>
            <!--folder name="x-pure-php4">
                <file name="language.nbs" url="purePHP4.nbs">
                    <attr name="icon" stringvalue="org/netbeans/modules/languages/php/resources/php.png"/>
                </file>
                <file name="Settings.settings" url="LanguagesOptions.settings"/>
            </folder-->
        </folder>
    </folder>
    
    <folder name="GsfPlugins">
        <folder name="text">
            <folder name="x-php5">
                <!-- Used by index scanner to identify relevant files -->
                <folder name="extensions">
                    <file name="php"/>
                    <file name="php5"/>
                    <file name="phtml"/>
                    <file name="inc"/>
                </folder>

				<file name="language.instance">
				    <attr name="instanceOf" stringvalue="org.netbeans.modules.gsf.api.GsfLanguage"/>
				    <attr name="instanceClass" stringvalue="org.netbeans.modules.languages.php.PhpLanguage"/>
				</file>
				
                <file name="parser.instance">
                    <attr name="instanceOf" stringvalue="org.netbeans.modules.gsf.api.Parser"/>
                    <attr name="instanceClass" stringvalue="org.netbeans.modules.languages.php.PhpParser"/>
                </file>

                <file name="completion.instance">
                    <attr name="instanceOf" stringvalue="org.netbeans.modules.gsf.api.Completable"/>
                    <attr name="instanceClass" stringvalue="org.netbeans.modules.languages.php.CodeCompleter"/>
                </file>

                <file name="indexer.instance">
                    <attr name="instanceOf" stringvalue="org.netbeans.modules.gsf.api.Indexer"/>
                    <attr name="instanceClass" stringvalue="org.netbeans.modules.languages.php.PhpIndexer"/>
                </file>

                <file name="structure.instance">
                    <attr name="instanceOf" stringvalue="org.netbeans.modules.gsf.api.StructureScanner"/>
                    <attr name="instanceClass" stringvalue="org.netbeans.modules.languages.php.StructureAnalyzer"/>
                </file>
                
                <file name="formatter.instance">
                    <attr name="instanceOf" stringvalue="org.netbeans.modules.gsf.api.Formatter"/>
                    <attr name="instanceClass" stringvalue="org.netbeans.modules.php.editor.formatting.GenericTopLevelLanguageFormatter"/>
                </file>
            </folder>
        </folder>
    </folder>
    
    <!-- 
        IconBase attribute is red by GSF data loader. Strings below are needed
        to avoid NPE.
    -->
    <folder name="Loaders">
        <folder name="text">
            <folder name="x-php5">
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/languages/php/resources/php16.png"/>
                <attr name="iconBase" stringvalue="/org/netbeans/modules/languages/php/resources/php16.png"/>
            </folder>
        </folder>
    </folder>
    
</filesystem>
