<project name="Meteora UML Test" basedir="." default="all">
    <property file="${basedir}/build.properties"/>
    
    <!-- Name of tested module -->
    <property name="xtest.module" value="uml6"/>
    
    <property name="module.name" value="uml6"/>
    
    <!-- this property should be defined in the nbbuild/netbeans/moduleCluster.properties,
    but it is not there at the moment of writing this -->
    <property name="netbeans.dest.dir" location="../../nbbuild/netbeans/"/>
    <property name="uml.dir" location="${netbeans.dest.dir}/uml6"/>
    <property name="uml.modules.dir" location="${uml.dir}/modules"/>
    <property name="xtest/nbjunit.dir" location="../../nbbuild/netbeans/testtools"/>
    
    <property name="xtest.home" location="../../xtest"/>
    <property name="jemmy.home" location="../../jemmy"/>
    
    <!-- Imports buildtests, cleantests, runtest, cleanresults, realclean, printconfig targets. -->
    <import file="../../nbbuild/templates/xtest.xml"/>
    
    
    
    <!-- default testtypes, attributes used when no value is supplied from command line -->
    <property name="xtest.testtype" value="qa-functional"/>
    <property name="xtest.attribs" value="all"/>
    
    <!-- required to avoid project.xml parsing-->
    <property name="test.qa-functional.runtime.cp" value=""/>
    <property name="test.qa-functional.compile.cp" value=""/>
    
    <!-- Task is use at submodules' build scripts -->
    <target name="build-uml-lib">
        <path id="uml.classpath">
            <fileset dir="${uml.modules.dir}">
                <include name="**/org-netbeans*.jar"/>
            </fileset>
            <pathelement location="${netbeans.dest.dir}/uml6/modules/org-netbeans-modules-uml-drawingarea.jar"/>
            <pathelement location="${netbeans.dest.dir}/platform9/modules/org-openide-nodes.jar"/>
            <pathelement location="${netbeans.dest.dir}/platform9/modules/org-openide-windows.jar"/>            
            <pathelement location="${netbeans.dest.dir}/platform9/modules/org-netbeans-api-visual.jar"/>            
            <pathelement location="../../jemmy/builds/jemmy.jar"/>                    
            <pathelement location="../../jellytools/builds/jelly2-nb.jar"/>
            <pathelement location="${xtest.home}/lib/junit.jar"/>                    
            <pathelement location="${xtest.home}/lib/nbjunit.jar"/>                                   
            <pathelement location="${netbeans.dest.dir}/platform9/lib/org-openide-util.jar"/>
            <pathelement location="${netbeans.dest.dir}/platform9/modules/org-netbeans-core.jar"/>
            <pathelement location="${netbeans.dest.dir}/platform9/modules/org-netbeans-core-windows.jar"/>
            <pathelement location="${netbeans.dest.dir}/platform9/modules/org-netbeans-swing-tabcontrol.jar"/>
            <pathelement location="${netbeans.dest.dir}/java1/modules/org-netbeans-modules-java-j2seproject.jar"/>
            <pathelement location="${netbeans.dest.dir}/java1/modules/org-netbeans-modules-project-ant.jar"/> 
            <pathelement location="${netbeans.dest.dir}/ide10/modules/org-netbeans-modules-projectapi.jar"/> 
            <!--pathelement location="ext/junit-3.8.1.jar"/>                    
            <pathelement location="ext/nbjunit.jar"/-->                                   
        </path>
        <echo message="**********************************************************"/>
        <echo message="NETBEANS DIR: ${netbeans.dest.dir}"/>
        <echo message="UML DIR: ${uml.dir}"/>
        <echo message="UML MODULES DIR: ${uml.modules.dir}"/>
        <echo message="XTEST HOME: ${xtest.home}"/>
        <mkdir dir="qa-lib/classes"/>
        <javac classpathref="uml.classpath" srcdir="qa-lib/src" destdir="qa-lib/classes" debug="true" />
        <jar basedir="qa-lib/classes" jarfile="qa-lib/uml-lib.jar"/>
        <condition property="buildumllib.completed">
            <available file="qa-lib/uml-lib.jar"/>
        </condition>
        <echo message="build-uml-lib.completed: ${buildumllib.completed}"/>
    </target>
    
    <target name="clean-uml-lib">
        <delete>
            <fileset dir="./qa-lib/">
                <include name="**/*.class"/>
                <include name="**/*.jar"/>
            </fileset>
        </delete>
        <property name="clean-uml-lib.completed" value="true"/>
    </target>
    
    
    <target name="javadoc" depends="build-uml-lib">
        <javadoc destdir="javadoc"
                 packagenames="org.netbeans.test.umllib.*,
                 org.netbeans.test.umllib.actions,
                 org.netbeans.test.umllib.customelements,
                 org.netbeans.test.umllib.exceptions,
                 org.netbeans.test.umllib.namers,
                 org.netbeans.test.umllib.nodes,
                 org.netbeans.test.umllib.project,
                 org.netbeans.test.umllib.testcases,
                 org.netbeans.test.umllib.tests,
                 org.netbeans.test.umllib.util,
                 org.netbeans.test.umllib.values,
                 org.netbeans.test.umllib.vrf"
                 source="qa-lib/src"
                 windowtitle="UML library API">
            <sourcepath location="qa-lib/src"/>
        </javadoc>
    </target>
    
    <!-- Set build number, for example, 200708280000 --> 
    <target name="set-buildnumber" >
        <tstamp>
            <format property="buildnumber" pattern="yyyyMMdd0000"/>
        </tstamp> 
    </target>
    
    <target name="download-nightly-zip" depends="set-buildnumber">
        <property name="nb.zip" value="${nightly.zip.prefix}${buildnumber}.zip" />
        <echo> " Download latest netbeans zip file: ${nb.nightly.url}/${nb.zip}" </echo>
        <setproxy proxyhost="webcache.sfbay.sun.com" proxyport="8080"/>
        <get src="${nb.nightly.url}/${nb.zip}"
             dest="${nb.install.dir}/${nb.zip}" usetimestamp="true"/>
    </target>
    
    <!-- Download and unzip nightly zip file from nightly trunk 
         ant get-nightly-zip
    -->
    <target name="get-nightly-zip"  depends="download-nightly-zip" >   
        <delete dir="${nb.install.dir}/netbeans" failonerror="false"/>
        <unzip  overwrite="true" src="${nb.install.dir}/${nb.zip}" dest="${nb.install.dir}" />
    </target> 
    
    <!-- Download and unzip  lastest zip file from hundson trunk build
         ant get-hudson-zip -Dxtest.buildnumber=<buildNumber>
    -->
    <property name="xtest.buildnumber" value="" />
    <target name="get-hudson-zip"  >  
        <property name="nb.zip" value="${hudson.zip.prefix}${xtest.buildnumber}.zip" />
        <echo> " Download latest hudson build zip file: ${nb.hudson.url}/${nb.zip}" </echo>
        <setproxy proxyhost="webcache.sfbay.sun.com" proxyport="8080"/>
        <get src="${nb.hudson.url}/${nb.zip}"
             dest="${nb.install.dir}/${nb.zip}" usetimestamp="true"/>
        <delete dir="${nb.install.dir}/netbeans" failonerror="false"/>
        <unzip  overwrite="true" src="${nb.install.dir}/${nb.zip}" dest="${nb.install.dir}" />
    </target> 
</project>
