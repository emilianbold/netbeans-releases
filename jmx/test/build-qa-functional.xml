<project name="jmx/test-qa-functional" basedir="." default="all">

    <!-- Imports default qa-functional-compiler and runidetest executor.
        jemmy and jellytools jars are on classpath for both. -->
    <!-- <import file="../../xtest/lib/templates/xtest-qa-functional.xml"/> -->

    <!-- Adds property to IDE command line: suppress scanning of classpath -->
    <property name="xtest.ide.commandline.suffix" value="-J-Dnetbeans.javacore.noscan=false"/>

    <path id="jemmy.and.jelly.path">
        <pathelement location="../../nbbuild/netbeans/nb6.7/modules/org-netbeans-modules-jellytools.jar"/>
        <pathelement location="../../nbbuild/netbeans/harness/modules/org-netbeans-modules-jellytools-platform.jar"/>
        <pathelement location="../../nbbuild/netbeans/harness/modules/ext/jemmy-2.3.0.0.jar"/>
    </path>

    <!-- Creates an empty Java project in IDE -->
    <!-- <property name="xtest.ide.create.project" value="true"/> -->
    <!-- Opens project at specified location -->
    <property name="xtest.ide.open.project" location="${xtest.data}/SampleProject"/>

    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->

    <!-- You can override default qa-functional-compiler if you need something special -->
         
    <target name="qa-functional-compiler">
        <buildTests srcDir="qa-functional/src" compileExcludes="**/data/**">
            <classpath>
                <path refid="jemmy.and.jelly.path"/>
                <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
            </classpath>
        </buildTests>
    </target>
    
    
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <!-- This target executes tests inside IDE. It is defined in default-build-qa-functional.xml.
         If you need to customize it, you can uncomment the following and override it. -->
    <target name="runidetest">        
        <executeTests  pluginName="ide">
            <classpath>
                <path refid="jemmy.and.jelly.path"/>  
            </classpath>
        </executeTests>
    </target>
    
    
</project>

