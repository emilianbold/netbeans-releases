<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="netbeans" name="dlight.kit">
    <description>Builds, tests, and runs the project org.netbeans.modules.dlight.kit</description>
    <import file="../nbbuild/templates/projectized.xml"/>

    <target name="test-all" description="Run all tests in dlight cluster">
        <subant target="test" buildpath="../dlight.core.stack" inheritrefs="false" inheritall="false" failonerror="false"/>
        <subant target="test" buildpath="../dlight.db.derby" inheritrefs="false" inheritall="false" failonerror="false"/>
        <subant target="test" buildpath="../dlight.db.h2" inheritrefs="false" inheritall="false" failonerror="false"/>
        <subant target="test" buildpath="../dlight.dtrace" inheritrefs="false" inheritall="false" failonerror="false"/>
        <subant target="test" buildpath="../dlight.extras" inheritrefs="false" inheritall="false" failonerror="false"/>
        <subant target="test" buildpath="../dlight.indicators" inheritrefs="false" inheritall="false" failonerror="false"/>
        <!--<subant target="test" buildpath="../dlight.nativeexecution" inheritrefs="false" inheritall="false" failonerror="false"/>-->
        <subant target="test" buildpath="../dlight.perfan" inheritrefs="false" inheritall="false" failonerror="false"/>
        <subant target="test" buildpath="../dlight.tools" inheritrefs="false" inheritall="false" failonerror="false"/>
        <subant target="test" buildpath="../dlight.util" inheritrefs="false" inheritall="false" failonerror="false"/>
    </target>

</project>
