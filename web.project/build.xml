<project basedir="." default="netbeans" name="web/project">
    <import file="../../nbbuild/templates/projectized.xml"/>
    
    <target name="jar-with-module-deps" if="module.dependencies">
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" compress="${build.package.compress}" index="${build.package.index}" manifest="${manifest.mf}">
            <manifest>
                <attribute name="OpenIDE-Module-Public-Packages" value="${public.packages}"/>
                <attribute name="OpenIDE-Module-IDE-Dependencies" value="${ide.dependencies}"/>
                <attribute name="OpenIDE-Module-Module-Dependencies" value="${module.dependencies}"/>
                <attribute name="OpenIDE-Module-Implementation-Version" value="${buildnumber}"/>
                <attribute name="OpenIDE-Module-Build-Version" value="${buildnumber}"/>
            </manifest>
            <fileset dir="${build.classes.dir}"/>
        </jar>
    </target>

    <target name="files-init" depends="basic-init">
        <patternset id="module.files">
            <include name="${module.jar}"/>
            <include name="${nb.system.dir}/Modules/${code.name.base.dashes}.xml"/>
            <include name="ant/extra/copyfiles.jar"/>
            <include name="ant/sources/org/netbeans/modules/web/project/ant/*.java"/>
        </patternset>
    </target>

    <target name="ant-extra" depends="init">
        <mkdir dir="build/antclasses"/>
        <javac srcdir="antsrc" destdir="build/antclasses" source="1.4" debug="true" deprecation="true">
            <classpath>
                <path refid="cp"/>
                <pathelement location="${ant.jar}"/>
                <pathelement location="${tools.jar}"/>
                <pathelement location="../external/servlet-api-2.4.jar"/>
                <pathelement location="../external/jsp-api-2.0.jar"/>
                <pathelement location="../external/jasper-compiler-5.5.7.jar"/>
                <pathelement location="../external/jasper-runtime-5.5.7.jar"/>
                <pathelement location="../../libs/external/commons-logging-1.0.4.jar"/>
            </classpath>
        </javac>
        <copy todir="build/antclasses">
            <fileset dir="antsrc" excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"/>
        </copy>
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/ant/extra"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/ant/extra/copyfiles.jar" compress="false">
            <fileset dir="build/antclasses">
                <excludesfile name="${nb_all}/nbbuild/standard-jar-excludes.txt"/>
            </fileset>
        </jar>
        <copy todir="${netbeans.dest.dir}/${cluster.dir}/ant/sources">
            <fileset dir="antsrc" includes="**/*.java"/>
        </copy>
    </target>

    <target name="netbeans-extra" depends="ant-extra"/>
</project>
