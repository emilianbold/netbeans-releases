<!--
This dtd describes the component descriptor file format without presenter serializer.
This smallIcon and largeIcon are image paths that are going to be loaded using "Utilities.loadImage" method.
// TODO - RequiredLibrary, Properties, Setters, Presenters
-->

<!ELEMENT ComponentDecriptor (TypeDescriptor,PaletteDescriptor?,PropertyDescriptor*,RequiredLibrary*,Presenters?)>
<!ATTLIST ComponentDecriptor
    version CDATA #REQUIRED
>

<!ELEMENT TypeDescriptor EMPTY>
<!ATTLIST TypeDescriptor
    superTypeID CDATA #REQUIRED
    thisTypeID CDATA #REQUIRED
    canInstantiate (true|false) "true"
    canDerive (true|false) "true"
>

<!ELEMENT PaletteDescriptor EMPTY>
<!ATTLIST PaletteDescriptor
    displayName CDATA #REQUIRED
    toolTip CDATA #IMPLIED
    helpTopic CDATA #IMPLIED
    smallIcon CDATA #IMPLIED
    largeIcon CDATA #IMPLIED
    preferredCategoryID CDATA #IMPLIED
>

<!ELEMENT PropertyDescriptor EMPTY>
<!ATTLIST PropertyDescriptor
    name CDATA #REQUIRED
    typeID CDATA #REQUIRED
    defaultValue CDATA #IMPLIED
    allowNull CDATA (true|false) "true"
    allowUserCode CDATA (true|false) "true"
    useForSerialization (true|false) "true"
    readOnly CDATA (true|false) "false"
>

<!ELEMENT RequiredLibrary EMPTY>
<!ATTLIST RequiredLibrary
    name CDATA #REQUIRED
>

<!ELEMENT Presenters EMPTY>
<!ATTLIST Presenters
>
