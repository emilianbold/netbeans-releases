<project name="utilities" default="netbeans" basedir=".">

  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../nbbuild/standard-nbm-license.txt"/>
  <property name="javadoc.destdir.default" value="javadoc"/>
  <property name="javadoc.extra.param" value=""/>
  <property name="javadoc.private" value="false"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../nbbuild/nbantext.jar"/>

  <target name="init">
    <path id="utilities-cp">
      <pathelement location="../openide/openide-13javac-workaround.jar"/>
      <pathelement location="../openide/netbeans/lib/openide.jar"/>
      <pathelement location="../openide/loaders/netbeans/lib/openide-loaders.jar"/>
      <pathelement location="../openide/io/netbeans/modules/autoload/openide-io.jar"/>
      <pathelement location="../openidex/netbeans/modules/autoload/openidex.jar"/>
      <pathelement location="../core/javahelp/netbeans/modules/autoload/javahelp-api.jar"/>
      <pathelement location="clisrc"/>
    </path>
  </target>
  
  <target name="compile-cli">
    <javac srcdir="clisrc"
           destdir="clisrc"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}"
           source="1.4">
      <classpath>
        <!-- Compiles against org.netbeans.CLIHandler: -->
        <pathelement location="../core/netbeans/lib/ext/boot.jar"/>
        <pathelement location="../openide/netbeans/lib/openide.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="compile" depends="init,compile-cli">
    <javac srcdir="src"
           destdir="src"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}"
           source="1.4">
      <classpath refid="utilities-cp"/>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/utilities.jar"
            manifest="manifest-subst.mf"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false">
      <locale name="ja"/>
    </locjar>
    <mkdir dir="netbeans/lib"/>
    <jar jarfile="netbeans/lib/openfile-cli.jar">
      <fileset dir="clisrc" excludesfile="../nbbuild/standard-jar-excludes.txt"/>
    </jar>
  </target>

  <target name="netbeans" depends="jars" description="Build everything.">
    <genlist targetname="nbm" outputfiledir="netbeans"/>
  </target>

  <target name="nbm" depends="netbeans" description="Build an NBM.">
    <makenbm file="utilities.nbm"
             topdir="."
             module="netbeans/modules/utilities.jar"
	     homepage="http://utilities.${homepage.base}/"
	     distribution="http://${dist.base}/utilities.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean" description="Clean everything.">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
      <fileset dir="clisrc">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="utilities.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="${javadoc.destdir.default}"/>
    <delete dir="Info"/>
  </target>

  <target name="check-javadoc-destdir-overridden"
          if="javadoc.destdir">
    <property name="javadoc.destdir.overridden" value="true"/>
  </target>

  <target name="set-default-javadoc-destdir"
          unless="javadoc.destdir.overridden"
          depends="check-javadoc-destdir-overridden">
    <property name="javadoc.destdir" value="${javadoc.destdir.default}"/>
  </target>

  <target name="set-javadoc-destdir"
          depends="check-javadoc-destdir-overridden,set-default-javadoc-destdir"/>

  <target name="clear-default-javadoc-destdir"
          unless="javadoc.destdir.overridden"
          depends="check-javadoc-destdir-overridden,set-javadoc-destdir">
    <delete dir="${javadoc.destdir}"/>
    <mkdir dir="${javadoc.destdir}"/>
  </target>

  <target name="check-javadoc-destdir-exists" depends="set-javadoc-destdir">
    <available file="${javadoc.destdir}" type="dir" property="javadoc.destdir.exists"/>
  </target>

  <target name="fail-if-javadoc-destdir-missing"
          unless="javadoc.destdir.exists"
          depends="check-javadoc-destdir-exists">
    <fail message="Destination directory does not exist: ${javadoc.destdir}"/>
  </target>

  <target name="check-overridden-javadoc-destdir"
          if="javadoc.destdir.overridden"
          depends="check-javadoc-destdir-overridden,set-javadoc-destdir,fail-if-javadoc-destdir-missing"/>

  <target name="prepare-javadoc-destdir"
          depends="check-overridden-javadoc-destdir,clear-default-javadoc-destdir"/>

  <target name="javadoc" description="Build utilities module API documentation."
          depends="init,prepare-javadoc-destdir">
    <tstamp/>
    <property name="apis-footer" value="&lt;font size=-2 color=gray&gt;Built on ${TODAY}.&amp;nbsp;&amp;nbsp;|&amp;nbsp;&amp;nbsp;Portions Copyright 1997-2004 Sun Microsystems, Inc. All rights reserved.&lt;/font&gt;"/>
    <echo message="Build Utilities module API documentation..."/>
    <echo message="Destination directory: ${javadoc.destdir}"/>
    <javadoc destdir="${javadoc.destdir}"
             packagenames="org.netbeans.modules.*"
             doctitle="NetBeans Utilities module APIs"
             windowtitle="NetBeans Utilities module APIs"
             bottom="${apis-footer}"
             use="true"
             splitindex="true"
             private="${javadoc.private}"
             author="false"
             version="false"
             maxmemory="384m"
             source="1.4"
             additionalparam="-breakiterator ${javadoc.extra.param}">
      <sourcepath>
        <pathelement location="src"/>
        <pathelement location="loaderswitcher/src"/>
        <pathelement location="group/src"/>
      </sourcepath>
      <classpath refid="utilities-cp"/>
      <classpath>
        <fileset dir="..">
          <patternset includes="openide/compiler/netbeans/modules/autoload/openide-compiler.jar"/>
        </fileset>
      </classpath>

      <group title="Loader Switcher"    packages="org.netbeans.modules.loaderswitcher*"/>
      <group title="Group"              packages="org.netbeans.modules.group*"/>
      <group title="Open File"          packages="org.netbeans.modules.openfile*"/>
      <group title="PDF"                packages="org.netbeans.modules.pdf*"/>
      <group title="Search"             packages="org.netbeans.modules.search*"/>
      <group title="URL"                packages="org.netbeans.modules.url*"/>
    </javadoc>    
  </target>

</project>
