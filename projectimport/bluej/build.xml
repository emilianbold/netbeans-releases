<project name="org.netbeans.bluej" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.bluej.</description>
    
    <property file="${basedir}/../../contrib/bluej-suite/external-references.properties"/>
    <import file="nbproject/build-impl.xml"/>
    <target name="nblib" depends="init">
        
        <mkdir dir="build/antclasses"/>
        <!-- moved here from suite.properties file because the stuff doesn't resolve otherwise -->
        <property name="antsrc.cp" value="${ant.jar}:${netbeans.dest.dir}/${bluej_platform_cluster}/modules/org-openide-io.jar:${netbeans.dest.dir}/${bluej_platform_cluster}/lib/org-openide-util.jar"/>
        <javac srcdir="antsrc" destdir="build/antclasses" source="1.4" debug="true" deprecation="true">
            <classpath>
                <pathelement path="${antsrc.cp}"/>
            </classpath>
        </javac>
        <copy todir="build/antclasses">
            <fileset dir="antsrc" excludes="${jar-excludes}"/>
        </copy>
        <mkdir dir="${cluster}/ant/nblib"/>
        <jar jarfile="${cluster}/ant/nblib/org-netbeans-bluej.jar" compress="false">
            <fileset dir="build/antclasses"/>
        </jar>
    </target>

    <target name="netbeans-extra" depends="nblib"/>
</project>
