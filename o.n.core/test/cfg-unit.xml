<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="core unit test config">
    <!-- Tests which should be run before commit to validate IDE, needs IDE mode for ValidateLayer suites -->
    <testbag testattribs="commit" executor="ide" name="Before Commit Validation in IDE" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <!-- this shall be enabled! <exclude name="org/netbeans/core/AutomountSupportTest.class"/> -->
                <include name="org/netbeans/core/BundleKeysTest.class"/> <!-- see JellyTools_compatibility -->
                <!-- this includes all tests testing layers -->
                <include name="**/ValidateLayer*Test.class"/> 
                <!-- Can throw OutOfMemoryError: <include name="org/netbeans/core/ValidateClassLinkageTest.class"/> -->
            </patternset>
        </testset>
    </testbag>
  
    <testbag testattribs="stable" executor="ide" name="Unit tests running in the IDE" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/filesystems/*.class"/>
                <include name="org/netbeans/beaninfo/editors/*.class"/>
                <!-- this includes all tests testing layers -->
                <include name="**/ValidateLayer*Test.class"/> 
                <!-- Can throw OutOfMemoryError: <include name="org/netbeans/core/ValidateClassLinkageTest.class"/> -->
                <exclude name="org/netbeans/core/filesystems/MIMEResolverImplTest.class"/>
                <!-- For #36395. Trying to work around in Ant module instead.
                <include name="org/netbeans/core/execution/TaskThreadGroupGCTest.class"/>
                -->
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="stable OR cache" executor="ide" name="Testing lookup in real IDE" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/lookup/*Test.class"/>
                <include name="org/netbeans/core/lookup/*Test?.class"/>
                <exclude name="org/netbeans/core/lookup/InstanceDataObjectModuleTest4.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="stable" executor="code" name="Unit tests in code mode" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/*Test.class"/>
                <exclude name="org/netbeans/core/ValidateClassLinkageTest.class"/>
                <exclude name="org/netbeans/core/PlainTest.class/testPlainShowsNoGUI"/>
                <exclude name="org/netbeans/core/BundleKeysTest.class"/> <!-- see JellyTools_compatibility -->
                <include name="org/netbeans/core/modules/*Test.class"/>
                <include name="org/netbeans/core/modules/*Test?.class"/>
                <include name="org/netbeans/core/projects/SystemFileSystemTest.class"/>
                <include name="org/netbeans/core/projects/cache/*Test.class"/>
                <include name="org/netbeans/core/lookup/*Test.class"/>
                <include name="org/netbeans/core/lookup/*Test?.class"/>
                <exclude name="org/netbeans/core/lookup/InstanceDataObjectModuleTest4.class"/>
                <include name="org/netbeans/*Test.class"/>
                <!-- these tests are run in IDE mode-->
                <exclude  name="**/ValidateLayer*Test.class"/> 
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="failing" executor="code" name="testbag_4" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <!-- Under investigation why it fails (probably "as designed"): -->
                <include name="org/netbeans/core/lookup/InstanceDataObjectModuleTest4.class"/>
                <!-- Seems to fail consistently on tester machine. Cannot reproduce on workstation. TBD. -->
                <!-- Window displayed always says: "Exception". So something is being thrown by something else. -->
                <!-- But there is no way to track down what that is. When core-windows.jar includes all -->
                <!-- GUI stuff, and plain core does not show dialogs for exceptions, this will be fixable. -->
                <include name="org/netbeans/core/PlainTest.class/testPlainShowsNoGUI"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="failing" executor="ide" name="testbag_5" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/filesystems/MIMEResolverImplTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="stable" executor="ide" name="JellyTools_compatibility" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/lib/terminalemulator/TermTest.class"/>
                <include name="org/netbeans/core/projects/FileStatePropertyTest.class"/>
                <include name="org/netbeans/core/BundleKeysTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <!-- If you want to use this testbag you *must* provide xtest.includes property, -->
    <!-- (either on cmd line or in the script) to explicitly define which test       -->
    <!-- you want to run. This will run *only* tests from unit/src folder !!!        -->
    <testbag testattribs="empty" executor="code" name="testbag_empty" resultsprocessor="unit">
        <testset dir="unit/src"/>
    </testbag>
    <testbag testattribs="emptyide" executor="ide" name="testbag_emptyide" resultsprocessor="unit">
        <testset dir="unit/src"/>
    </testbag>

    <testbag testattribs="dev" executor="code" name="testbag_dev" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <!-- Add your own code tests -->
            </patternset>
        </testset>
    </testbag>
    
    <executor name="code" antfile="build-unit.xml" target="runcodetest"/>
    
    <executor name="ide" antfile="build-unit.xml" target="runidetest"/>

    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>

    <resultsprocessor name="unit" antfile="build.xml" target="test_report" default="true"/>

</mconfig>
