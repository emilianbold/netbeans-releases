<project name="javascript" default="everything" basedir="..">
    <property name="nbroot" location="."/>

    <target name="gsf">
        <ant dir="${nbroot}/nbbuild" target="init"/>
        <subant target="netbeans" inheritAll="false">
            <property name="scan.binaries" value="true"/>
            
            <buildpath location="gsf.api"/>
            <buildpath location="gsfpath.api"/>
            <buildpath location="gsf"/>
            
        </subant>
        <!-- ruby/gsf/tools is for module development purposes only
        <subant target="netbeans" inheritAll="false">
            <property name="scan.binaries" value="true"/>
            <buildpath location="gsf/tools" />
        </subant>
        -->
    </target>
    
    <target name="javascript">
        <ant dir="${nbroot}/nbbuild" target="init"/>
        <subant target="netbeans" inheritAll="false">
            <property name="scan.binaries" value="true"/>
            
            <buildpath location="o.mozilla.rhino.patched"/>
            <buildpath location="javascript.editing"/>
            <buildpath location="javascript.hints"/>
            <buildpath location="javascript.refactoring"/>
        </subant>
    </target>

    <target name="everything" depends="gsf,javascript"/>

    <target name="clean">
        <ant dir="${nbroot}/nbbuild" target="init"/>
        <subant target="clean" inheritAll="false">
            <property name="scan.binaries" value="true"/>            
            
            <buildpath location="gsf.api"/>
            <buildpath location="gsfpath.api"/>
            <buildpath location="gsf"/>

            <buildpath location="o.mozilla.rhino.patched"/>
            <buildpath location="javascript.editing"/>
            <buildpath location="javascript.hints"/>
            <buildpath location="javascript.refactoring"/>
        </subant>
    </target>
    
    <target name="runtests" description="Run JavaScript tests">
        <subant buildpath="javascript.editing:javascript.hints"
            target="test"
            inheritall="false"
            inheritrefs="false">
            <property name="continue.after.failing.tests" value="true"/>
        </subant>
    </target>

    <target name="runtests-report" depends="runtests"
            description="Run JavaScript tests and generates test report">
        <!-- Collects JUnit results -->
        <property name="javascript.test.results" location="${nbroot}/javascript.editing/build/test/results" />
        <property name="module.results" value="build/test/unit/results/TEST-*.xml" />
        <mkdir dir="${javascript.test.results}"/>
        <junitreport todir="${javascript.test.results}">
            <fileset dir="${nbroot}">
                <include name="javascript.editing/${module.results}"/>
                <include name="javascript.hints/${module.results}"/>
            </fileset>
            <report format="frames" todir="${javascript.test.results}"/>
        </junitreport>
        <echo message="Unit Test Results: ${nbroot}/javascript.editing/build/test/results/index.html"/>
    </target>
</project>

