<mconfig name="QA functional config">

    <!-- Validation suite for my module -->
    <testbag testattribs="validation" executor="ide" prio="1" name="module validation">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/mobility/NewProjectFileTest.class"/>
                <exclude name="org/netbeans/test/mobility/NewProjectFileTest.class/testCreateNewMIDPFilesValidation"/>
            </patternset>
        </testset>
    </testbag>
    

    <testbag testattribs="commit" executor="ide" name="Mobility Pack Validation">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/mobility/NewProjectFileTest.class/testCreateNewMobileApplication"/>
                <include name="org/netbeans/test/mobility/NewProjectFileTest.class/testCreateNewMIDPFilesValidation"/>
                <include name="org/netbeans/test/mobility/NewProjectFileTest.class/testCompileMobileMIDPProject"/>
            </patternset>
        </testset>
    </testbag>
    
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    <executor name="ide-reuse" antfile="build-qa-functional.xml" target="runidetest-reuse"/>
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>
    
</mconfig>
