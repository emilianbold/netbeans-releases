<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="netbeans" name="php.doc">
    <description>Builds, tests, and runs the project org.netbeans.modules.php.doc</description>
    <import file="../nbbuild/templates/projectized.xml"/>

    <target name="jar" depends="doc-gen,projectized-common.jar"/>

    <target name="doc-gen" depends="doc-clean">
        <ant dir="libdoc"/>
    </target>

    <target name="doc-clean">
        <delete includeEmptyDirs="true">
                <fileset dir="${basedir}/src/org/netbeans/modules/php/doc/resources" includes="**/*">
                        <exclude name="*.java"/>
                        <exclude name="package.html"/>
			<exclude name="layer.xml"/>
			<exclude name="Bundle.properties"/>
                </fileset>
        </delete>
    </target>
</project>
