<mconfig name="projects/projectapi">
    
    <testbag testattribs="stable" executor="unit-executor" name="projects/projectapi">
        <testset dir="unit/src">
            <patternset>
                <include name="**/*Test.class"/>
                <!-- occasionally failing (#51024): -->
                <exclude name="org/netbeans/api/project/ProjectManagerTest.clas/testLoadExceptionWithConcurrentLoad"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="commit" executor="unit-executor" name="projects/projectapi">
        <testset dir="unit/src">
            <patternset>
                <include name="**/*Test.class"/>
                <!-- dsimonek says it fails for him, do not know why (#44273): -->
                <exclude name="org/netbeans/api/project/TestUtilTest.class/testCreateFileFromContent"/>
                <!-- occasionally failing (#51024): -->
                <exclude name="org/netbeans/api/project/ProjectManagerTest.clas/testLoadExceptionWithConcurrentLoad"/>
            </patternset>
        </testset>
    </testbag>
    
    <compiler name="default-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    <executor name="unit-executor" antfile="build-unit.xml" target="run-unit-test"/>
    
</mconfig>
