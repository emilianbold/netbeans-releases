<project basedir="." default="all" name="VW Components test suite">
    <delete failonerror="false" file="functional-compile.mark"/>
    <property file="${basedir}/build.properties"/>
    <import file="../../nbbuild/templates/xtest.xml"/>

    <!-- default testtypes, attributes used when no value is supplied from command line -->
    <property name="xtest.testtype" value="qa-functional"/>
    <property name="xtest.attribs" value="all,ide"/>

    <!-- Name of tested module   -->
    <property name="xtest.module" value="VW Components UI suite"/>
    <!--property name="ide.launcher" value="netbeans"/-->

    <!-- j2ee version to pass to test -->
    <property name="xtest.j2ee.version" value="J2EE1.4"/>
    
    <!-- netbeans nightly download site url -->
    <property name="xtest.nb.buildnumber" value="" />
    <property name="nb.nightly.url" value="${nb.url.part1}${xtest.nb.buildnumber}${nb.url.part2}"/>
    <property name="nb.installer" value="${nbi.name.part1}${xtest.nb.buildnumber}${nbi.name.part2}"/>


    <!-- get nbi from netbeans download site -->
    <target name="get-nbi">
        <setproxy proxyhost="webcache.sfbay.sun.com" proxyport="8080"/>
        <get src="${nb.nightly.url}/${nb.installer}"
             dest="${nb.install.dir}/${nb.installer}" usetimestamp="true"/>
    </target>


        <!-- Determine correct name of IDE launcher -->
	<available file="${netbeans.dest.dir}/bin/${ide.launcher}.exe" property="creator.exe_exists"/>

	<condition property="xtest.ide.launcher" value="${ide.launcher}.exe">
            <and>
                <contains string="${os.name}" substring="Windows"
                    casesensitive="false"/>
                <isset property="creator.exe_exists"/>
            </and>
        </condition>
	<condition property="xtest.ide.launcher" value="${ide.launcher}.exe">
            <and>
                <contains string="${os.name}" substring="Windows"
                    casesensitive="false"/>
                <not>
                    <isset property="creator.exe_exists"/>
                </not>
            </and>
        </condition>
	<condition property="xtest.ide.launcher" value="${ide.launcher}">
            <contains string="${os.name}" substring="SunOS"
                casesensitive="false"/>
        </condition>
	<condition property="xtest.ide.launcher" value="${ide.launcher}">
            <contains string="${os.name}" substring="Linux"
                casesensitive="false"/>
        </condition>
	<condition property="xtest.ide.launcher" value="${ide.launcher}">
            <contains string="${os.name}" substring="Mac"
                casesensitive="false"/>
        </condition>

        <echo message="IDE launcher = [${xtest.ide.launcher}]"/>

</project>
