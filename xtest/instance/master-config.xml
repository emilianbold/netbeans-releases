<testconfig>

  <!-- Dev TESTS -->
  <!-- ========= -->  

    <config name="unit-nb"> <!-- was also similar to old "config-1" -->
        <module name="core" testtypes="unit" attributes="stable"/>
        <module name="openide" testtypes="unit" attributes="stable"/>
        <module name="openide/masterfs" testtypes="unit" attributes="stable"/>
        <module name="openide/util" testtypes="unit" attributes="stable"/>
        <module name="openide/nodes" testtypes="unit" attributes="stable"/>
        <module name="openide/loaders" testtypes="unit" attributes="stable"/>
        <module name="openide/options" testtypes="unit" attributes="stable"/>
        <module name="openide/text" testtypes="unit" attributes="stable"/>
        <!-- Needs to be early since many other tests compile against it: -->
        <!-- (in general, check using: 'fgrep /build/test/unit/classes */{,*/}nbproject/project.properties') -->
        <module name="projects/projectapi" testtypes="unit" attributes="stable"/>
        <module name="ant" testtypes="unit" attributes="stable"/>
        <module name="ant/freeform" testtypes="unit" attributes="stable"/>
        <module name="ant/grammar" testtypes="unit" attributes="stable"/>
        <module name="ant/project" testtypes="unit" attributes="stable"/>
        <!-- Temp removed, cannot run on test4u, needs to be fixed -->
        <!-- <module name="apisupport/project" testtypes="unit"  attributes="stable"/> -->
        <module name="java/api" testtypes="unit" attributes="stable"/>
        <module name="java/freeform" testtypes="unit" attributes="stable"/>
        <module name="java/j2seplatform" testtypes="unit" attributes="stable"/>
        <module name="java/j2seproject" testtypes="unit" attributes="stable"/>
        <module name="java/javacore" testtypes="unit" attributes="full"/>
        <module name="java/platform" testtypes="unit" attributes="stable"/>
        <module name="java/project" testtypes="unit" attributes="stable"/>
        <module name="projects/projectui" testtypes="unit" attributes="stable"/>
        <module name="projects/libraries" testtypes="unit" attributes="stable"/>
        <module name="refactoring" testtypes="unit" attributes="full"/>
        <module name="web/freeform" testtypes="unit" attributes="full"/>
        <module name="core/output2" testtypes="unit" attributes="stable"/>
        <module name="core/favorites" testtypes="unit" attributes="stable"/>
        <module name="core/settings" testtypes="unit" attributes="stable"/>
        <module name="core/windows" testtypes="unit" attributes="stable"/>
        <module name="core/javahelp" testtypes="unit" attributes="stable"/>
        <module name="autoupdate" testtypes="unit" attributes="stable"/>
        <!-- J2EE team -->
        <module name="j2eeserver" testtypes="unit" attributes="stable"/>
        <module name="web/webapi" testtypes="unit" attributes="stable"/>
        <module name="j2ee/refactoring" testtypes="unit" attributes="stable"/>
        <module name="extbrowser" testtypes="unit" attributes="stable"/>
        <module name="html" testtypes="unit" attributes="stable"/>
        <module name="xml/multiview" testtypes="unit" attributes="stable"/>
        <module name="debuggerjpda" testtypes="unit" attributes="stable"/>
        <module name="web/core" testtypes="unit" attributes="stable"/>
        
        <!-- removed (not runnable): html, schema2beans -->
        <!-- hangs: core/execution -->
        <!-- does not run: core/multiview -->
        <!-- other candidate modules in current default moduleconfig: debuggercore debuggerjpda editor editor/fold editor/util httpserver mdr refactoring tasklist tasklist/core tasklist/docscan tasklist/suggestions tasklist/usertasks tomcatint/tomcat5 web/core web/jspparser xml/api xml/core xml/schema xml/text-edit xml/xsl -->
    </config>
  
  <config name="unit-nb-nbm">
      <module name="mdr" testtypes="unit" attributes="stable"/>
      <module name="mdr" testtypes="perf" attributes="stable">
          <property file="../../mdr/test/perf.properties"/>
      </module>
  </config>
  
  <!-- QA TESTS -->
  <!-- ======== -->
  
  <!-- VALIDATION -->
  
  <!-- QA functional tests for Netbeans -->
  <config name="qa-functional-nb">
        <module name="ide" testtypes="qa-functional" attributes="validation"/>
        <module name="java" testtypes="qa-functional" attributes="validation"/>
        <module name="java/editor" testtypes="qa-functional" attributes="validation"/>
        <module name="openide" testtypes="qa-functional" attributes="validation"/>
        <module name="refactoring" testtypes="qa-functional" attributes="validation"/>
        <module name="web" testtypes="qa-functional" attributes="validation"/>
        <module name="web/jspsyntax" testtypes="qa-functional" attributes="validation"/>
        <module name="form" testtypes="qa-functional" attributes="validation"/>
        <module name="java/project" testtypes="qa-functional" attributes="validation"/>
        <module name="editor" testtypes="qa-functional" attributes="validation"/>
        <module name="properties" testtypes="qa-functional" attributes="validation"/>
        <module name="jellytools" testtypes="unit" attributes="stable"/>
  </config>

  <!-- PERFORMANCE -->
 
  <config name="qa-performance">
 	<module name="performance"   testtypes="unit"  attributes="measure_ide"/>  
        <module name="performance"   testtypes="qa-functional"  attributes="measure_ui"/>  
  </config>
  
  <config name="qa-performance-ide">
 	<module name="performance"   testtypes="unit"  attributes="measure_ide"/>  
  </config>
  
  <config name="qa-performance-ui">
        <module name="performance"   testtypes="qa-functional"  attributes="measure_ui"/>  
  </config>
  
  <config name="qa-web-performance">
 	<module name="web"   testtypes="qa-performance"  attributes="measure_ui"/>  
 	<module name="j2ee"   testtypes="qa-performance"  attributes="measure_all"/>  
 	<module name="performance"   testtypes="qa-functional"  attributes=""/>  
  </config>
  
  
  <!-- validation suites for Release Engineering -->

  <!-- validation suite before commit -->
  <config name="commit-validation-nb">
      <module name="core" testtypes="unit" attributes="commit"/>
      <module name="core/windows" testtypes="unit" attributes="commit" />
      <module name="core/javahelp" testtypes="unit" attributes="commit" />
      <module name="ide" testtypes="qa-functional" attributes="commit"/>
  </config>

</testconfig>

