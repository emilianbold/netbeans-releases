<project name="xtest/test-unit" basedir="." default="all">

    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->
    
    <!-- Run instance to test reporting of compilation errors and then build tests. -->
    <target name="run-instance">
        <!--
        <ant dir="instance" target="runtests" inheritall="false">
            <property name="xtest.config" value="uncompilable"/>
            <property name="xtest.fail.on.failure" value="false"/>
        </ant>
        -->
        <!-- The following is used instead of above because inheritAll="false"
        doesn't work for all properties. Property xtest.config is set when run 
        on Test4U.
        -->
        <java classname="org.apache.tools.ant.Main" classpath="${java.class.path}" fork="true"
                input="dummy"> <!-- #90576 - otherwise it freezes when calling InetAddress.getLocalHost. -->
            <arg value="-f"/>
            <arg file="instance/build.xml"/>
            <arg value="runtests"/>
            <arg value="-Dxtest.config"/>
            <arg value="uncompilable"/>
            <arg value="-Dxtest.fail.on.failure"/>
            <arg value="false"/>
            <arg value="-Dxtest.home"/>
            <arg value="${xtest.home}"/>
        </java>
        <buildTests srcDir="unit/src" compileExcludes="**/data/**,**/UncompilableTest*">
            <classpath>
                <pathelement location="${xtest.home}/lib/xtest.jar"/>
            </classpath>
        </buildTests>
    </target>

    <!-- Included UncompilableTest to simulate compilation failure. -->
    <target name="unit-uncompilable-compiler">
        <buildTests srcDir="unit/src" compileExcludes="**/data/**">
            <classpath>
                <pathelement location="${xtest.home}/lib/xtest.jar"/>
            </classpath>
        </buildTests>
    </target>    

    <!-- Compile unit tests. This target is used in cfg-unit.xml. -->
    <target name="unit-compiler">
        <buildTests srcDir="unit/src" compileExcludes="**/data/**,**/UncompilableTest*">
            <classpath>
                <pathelement location="${xtest.home}/lib/xtest.jar"/>
            </classpath>
        </buildTests>
    </target>

    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <!-- Run tests in JVM -->
    <target name="run-jvm">
        <!-- Used in CheckUncompilableTest because on Test4U is special workdir
        and we need to determine where are results from instance. -->
        <property name="xtest.instance.results" location="instance/results"/>
        <executeTests pluginName="jvm" >
            <classpath>
            </classpath>
            <property name="xtest.jvm.args" value="-Dxtest.instance.results=${xtest.instance.results}"/>
        </executeTests>
    </target>
    
    <!-- Run tests in IDE -->
    <target name="run-ide">
        <property name="xtest.ide.commandline.suffix" value="--nogui"/>
        <executeTests pluginName="ide">
            <classpath>
            </classpath>
        </executeTests>
    </target>
</project>

