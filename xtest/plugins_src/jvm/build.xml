<project basedir="." default="all" name="XTest JVM plugin">


    <property name="plugins.install.dir" value="../../plugins"/>
    <property name="plugin.install.dir" value="${plugins.install.dir}/jvm"/>

    <target name="all" depends="deploy">        
    </target>
    
    

    <target name="compile">
        <path id="basecp">
            <pathelement location="../../lib/xtest.jar"/>
            <pathelement location="../../lib/xtest-junit-testrunner.jar"/>
            <pathelement location="../../lib/nbjunit.jar"/>
            <pathelement location="${ant.home}/lib/ant.jar"/>            
            <fileset dir="../../external">
                <include name="junit*.jar"/>
            </fileset>            
        </path>
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">          
          <classpath refid="basecp"/>
        </javac>     
    </target>
    
    
    <target name="jar" depends="compile">      
        <jar jarfile="lib/xtest-jvm-plugin.jar"            
            basedir="build/classes"
            excludesfile="../../../nbbuild/standard-jar-excludes.txt"
            compress="false">
            <include name="org/netbeans/xtest/plugin/jvm/**"/>
        </jar>
    </target>
    
    
    <target name="deploy" depends="jar">        
        <mkdir dir="${plugin.install.dir}/lib"/>        
        <copy file="plugin_descriptor.xml" toDir="${plugin.install.dir}"/>
        <copy todir="${plugin.install.dir}/lib">
            <fileset dir="lib"/>
        </copy>
    </target>
    
    <target name="clean">
        <delete dir="${plugin.install.dir}"/>    
        <delete file="lib/xtest-jvm-plugin.jar"/>
        <delete dir="build"/>
    </target>
    
</project>
