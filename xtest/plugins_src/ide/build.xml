<!-- build script for IDE XTest plugin -->
<project basedir="." default="deploy" name="XTest IDE plugin">
    <import file="../../../nbbuild/default-properties.xml"/>

    <property name="plugins.install.dir" location="../../plugins"/>

    <target name="compile">
        <path id="basecp">
            <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar" />
            <pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar" />
            <pathelement location="${core.dir}/${nb.lib.dir}/core.jar"/>
            <pathelement location="${core.dir}/${nb.lib/ext.dir}/boot.jar"/>
            <pathelement location="${openide/execution.dir}/${nb.modules.dir}/org-openide-execution.jar"/>
            <pathelement location="${openide/io.dir}/${nb.modules.dir}/org-openide-io.jar"/>
            <pathelement location="${core/execution.dir}/${nb.modules.dir}/org-netbeans-core-execution.jar"/>
            <!-- project support classpath -->
            <pathelement location="${projects/projectapi.dir}/${nb.modules.dir}/org-netbeans-modules-projectapi.jar"/>
            <pathelement location="${projects/projectui.dir}/${nb.modules.dir}/org-netbeans-modules-projectui.jar"/>
            <pathelement location="${java/j2seproject.dir}/${nb.modules.dir}/org-netbeans-modules-java-j2seproject.jar"/>
            <pathelement location="${ant/project.dir}/${nb.modules.dir}/org-netbeans-modules-project-ant.jar"/>
            <!-- metadata repository support classpath -->
            <pathelement location="${java/javacore.dir}/${nb.modules.dir}/org-netbeans-modules-javacore.jar"/>
            <pathelement location="${mdr/nbjmiutils.dir}/${nb.modules.dir}/ext/jmiutils.jar"/>
            <!-- use junit with already compiled extensions -->        
            <pathelement location="../../lib/xtest.jar"/>
            <pathelement location="../../lib/xtest-junit-testrunner.jar"/>
            <pathelement location="../../lib/nbjunit.jar"/>
            <pathelement location="${ant.home}/lib/ant.jar"/>
            <fileset dir="../../external">
                <include name="junit*.jar"/>
            </fileset>            
        </path>
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">          
          <classpath refid="basecp"/>
        </javac> 
    </target>
    
    
    <target name="jar" depends="compile">
        <!-- ant tasks used in ide_plugin_targets.xml -->
        <jar jarfile="lib/xtest-ide-plugin.jar"            
            basedir="build/classes"
            excludesfile="../../../nbbuild/standard-jar-excludes.txt"
            compress="false">
            <include name="org/netbeans/xtest/plugin/ide/Ide*.class"/>
        </jar>
        <!-- load by system classloader (-J-Dnetbeans.systemclassloader.patches) -->
        <jar jarfile="lib/xtest-ide-testexec.jar"
            basedir="build/classes"
            excludesfile="../../../nbbuild/standard-jar-excludes.txt"
            compress="false">
            <include name=""/>
            <!-- At the time there is no reason to include anything in this jar. -->
            <!-- <include name="org/netbeans/xtest/plugin/ide/Main*.class"/> -->
        </jar>
        <!-- -J-Dnetbeans.classpath or also AKA Dynamic Classpath-->
        <jar jarfile="lib/xtest-ide-main.jar"
            basedir="build/classes"
            excludesfile="../../../nbbuild/standard-jar-excludes.txt"
            compress="false">
            <include name="org/netbeans/xtest/plugin/ide/Main*.class"/>
            <include name="org/netbeans/xtest/plugin/ide/MainWithExec*.class"/>
            <!-- Stuff needed for xtest error manager functionality controled by xtest.ide.error.manager property -->
            <include name="org/netbeans/xtest/plugin/ide/services/XTestErrorManager.class"/>
            <include name="META-INF/**"/>
        </jar>        
    </target>
    
    
    <target name="deploy" depends="jar">
        <property name="plugin.install.dir" value="${plugins.install.dir}/ide"/>
        <mkdir dir="${plugin.install.dir}/lib"/>        
        <copy file="plugin_descriptor.xml" toDir="${plugin.install.dir}"/>
        <copy todir="${plugin.install.dir}/lib">
            <fileset dir="lib"/>
        </copy>
    </target>
    
    <target name="clean">
        <delete file="lib/xtest-ide-main.jar"/>
        <delete file="lib/xtest-ide-testexec.jar"/>
        <delete file="lib/xtest-ide-plugin.jar"/>
        <delete dir="build"/>
     </target>
     
</project>
