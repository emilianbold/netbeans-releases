<mconfig name="Unit config">

    <testbag testattribs="stable" executor="ide-projects" name="XTest IDE Plugin">
        <testset dir="unit/src">
            <patternset>
                <!-- Order of classes is significant. -->
                <include name="**/XTestIDEHandlerTest.class"/>
                <include name="**/XTestIDEHandlerCheckTest.class"/>
                <include name="**/XTestErrorManagerTest.class"/>
                <include name="**/XTestErrorManagerCheckTest.class"/>
                <include name="**/OpenCreateProjectTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <!-- Test netbeans.javacore.noscan=true property. -->
    <testbag testattribs="stable" executor="ide-noscan" name="XTest IDE Plugin - NoScan">
        <testset dir="unit/src">
            <patternset>
                <include name="**/NoScanTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="stable" executor="ide" name="Watchdog - prepare" prio="1" timeout="60000">
        <testset dir="unit/src">
            <patternset>
                <include name="**/IdeWatchdogTest.class/testDoNotStopWatchdog"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="stable" executor="ide" name="Watchdog" prio="2">
        <testset dir="unit/src">
            <patternset>
                <include name="**/IdeWatchdogTest.class/testShouldNotBeKilled"/>
                <include name="**/IdeWatchdogTest.class/testNativeKill"/>
            </patternset>
        </testset>
    </testbag>

    <executor name="jvm" antfile="build-unit.xml" target="run-jvm" default="true"/>
    <executor name="ide" antfile="build-unit.xml" target="run-ide"/>
    <executor name="ide-noscan" antfile="build-unit.xml" target="run-ide-noscan"/>
    <executor name="ide-projects" antfile="build-unit.xml" target="run-ide-projects"/>
    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>

</mconfig>
