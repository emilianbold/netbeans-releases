<project name="xtest" default="netbeans" basedir=".">

    <property name="netbeans.dest.dir" location="../nbbuild/netbeans"/>
    <property file="${netbeans.dest.dir}/moduleCluster.properties"/>
    <property file="build.properties"/>

    <target name="check-prepare-nbjunit">
        <condition property="do.not.need.to.prepare.nbjunit">
            <and>
                <available file="lib/nbjunit.jar"/>
                <or>
                    <not>
                        <available file="${netbeans.dest.dir}/testtools/modules/org-netbeans-modules-nbjunit.jar"/>
                    </not>
                    <uptodate srcfile="${netbeans.dest.dir}/testtools/modules/org-netbeans-modules-nbjunit.jar" targetfile="lib/nbjunit.jar"/>
                </or>
                <available file="lib/nbjunit-ide.jar"/>
                <or>
                    <not>
                        <available file="${netbeans.dest.dir}/testtools/modules/org-netbeans-modules-nbjunit-ide.jar"/>
                    </not>
                    <uptodate srcfile="${netbeans.dest.dir}/testtools/modules/org-netbeans-modules-nbjunit-ide.jar" targetfile="lib/nbjunit-ide.jar"/>
                </or>
            </and>
        </condition>
    </target>

    <!-- Build nbjunit/ide only when building against IDE (not platform). -->
    <target name="build-nbjunit/ide" if="java.source.dir">
        <ant dir="../nbjunit.ide" target="jar" inheritAll="false"/>
        <jar jarfile="lib/nbjunit-ide.jar">
            <zipfileset src="${netbeans.dest.dir}/testtools/modules/org-netbeans-modules-nbjunit-ide.jar">
                <include name="**/*"/>
                <exclude name="META-INF/MANIFEST.MF"/>
            </zipfileset>
        </jar>
    </target>
    
    <target name="prepare-nbjunit" depends="check-prepare-nbjunit" unless="do.not.need.to.prepare.nbjunit"> 
        <ant dir="../nbjunit" target="jar" inheritAll="false"/>
        <antcall target="build-nbjunit/ide"/>

        <!-- to keep compatibility, just copy the content of the JARs but not its manifest -->
        <jar jarfile="lib/nbjunit.jar">
            <zipfileset src="${netbeans.dest.dir}/testtools/modules/org-netbeans-modules-nbjunit.jar">
                <include name="**/*"/>
                <exclude name="META-INF/MANIFEST.MF"/>
            </zipfileset>
        </jar>
        <ant dir="../o.n.insane/insanelib" target="jar" inheritAll="false"/>
        <copy file="../o.n.insane/insanelib/dist/insanelib.jar" todir="lib"/>
    </target>

    <target name="compile" depends="call-bootstrap,prepare-nbjunit">
        <mkdir dir="${build.classes.dir}"/>
        <javac srcdir="src" destdir="${build.classes.dir}"
            deprecation="${build.compiler.deprecation}"
            debug="${build.compiler.debug}" source="1.4">
            <classpath path="${basecp}"/>
            <classpath path="${java.class.path}"/> 
        </javac>
    </target>
  

    <target name="jars" depends="compile">
        <mkdir dir="lib"/>
        <mkdir dir="lib/patches"/>
        <jar jarfile="lib/xtest.jar"
            manifest="manifest.mf"
            basedir="${build.classes.dir}"
            compress="false">
            <include name="org/netbeans/xtest/**"/>
            <exclude name="org/netbeans/xtest/pe/server*/**"/>
            <exclude name="org/netbeans/xtest/testrunner/**"/>
        </jar>	    
    
        <jar jarfile="lib/xtest-junit-testrunner.jar"
            manifest="manifest.mf"
            basedir="${build.classes.dir}"
            compress="false">
            <include name="org/netbeans/xtest/testrunner/**"/>
        </jar>	        
  
        <copy file="../junit/external/junit-3.8.2.jar" tofile="lib/junit.jar"/>
    </target>
  
    <target name="build-xtest" depends="jars"/>
    
  
    <!-- builds XTest's plugins -->
    <target name="build-plugins">
        <mkdir dir="${plugins.install.dir}"/>
        <ant dir="plugins_src/base" target="deploy" inheritall="false"/>
        <ant dir="plugins_src/jvm" target="deploy" inheritall="false"/>
        <ant dir="plugins_src/ide" target="deploy" inheritall="false"/>
    </target>
  
    <target name="build-all" depends="build-xtest, build-plugins"/>
  
  
    <target name="makedist">
        <!-- build xtest from nbbuild, so required openide/core modules are built as well -->     
        <ant dir="../nbbuild" target="all-xtest" inheritAll="false">
            <property name="cluster.config" value="basic"/>
        </ant>
        <antcall target="zipdist"/>
    </target>

    <target name="zipdist">
        <!-- Zip already built xtest distribution. -->
        <zip zipfile="xtest-distribution.zip">     
            <zipfileset dir="lib" prefix="lib" includes="**/*.xml,**/*.jar,**/*.xsl,**/*.exe,**/*.so,**/*.dll,**/*.properties,**/*.dylib"/>
            <zipfileset dir="plugins" prefix="plugins" includes="**"/>
            <zipfileset dir="." includes="dist_build.xml" fullpath="build.xml"/>
            <zipfileset dir="." includes="standard-test-includes.txt,standard-test-excludes.txt"/>
        </zip>
    </target>

    <target name="netbeans" depends="build-all"/>
    <target name="nbm" depends="netbeans" description="Dummy target."/>
    <target name="netbeans-ml" description="Dummy target."/>

    <target name="clean-xtest">
        <ant dir="../nbjunit" target="clean"/>
        <delete file="lib/nbjunit.jar"/>
        <delete file="lib/nbjunit-ide.jar"/>
        <delete file="lib/insanelib.jar"/>
        <delete dir="build"/>
        <delete file="module-manifest-subst.mf"/>
        <delete dir="lib/patches"/>
        <delete file="lib/xtest.jar"/>
        <delete file="lib/junit.jar"/>
        <delete file="lib/xtest-junit-testrunner.jar"/>
        <delete file="xtest-distribution.zip"/>
        <delete file="xtest-pes-distribution.zip"/>
        <delete dir="${plugins.install.dir}"/>
    </target>
  
    <target name="clean-plugins">
        <!-- plugins -->
        <ant dir="plugins_src/base" target="clean"/>
        <ant dir="plugins_src/jvm" target="clean"/>
        <ant dir="plugins_src/ide" target="clean"/>  
    </target>
  
  
    <target name="clean" depends="clean-xtest,clean-plugins"/>

    <target name="version" depends="jars">
        <ant antfile="lib/module_harness.xml" target="version">
            <property name="xtest.home" value="./"/>
        </ant>
    </target>  
 
  
    <target name="all-xtest">
        <!-- build xtest from nbbuild, so required openide/core modules are built as well -->     
        <ant dir="../nbbuild" target="all-xtest" inheritAll="false"/>
    </target>  
  
    <!-- XTest PES proxy targets -->
    <target name="makedist-pes">
        <ant dir="pes" target="makedist"/>
    </target>
  
    <target name="clean-pes">
        <ant dir="pes" target="clean"/>
    </target>
 
    <!-- Build distribution against existing netbeans build. You can set 
         -Dnetbeans.dest.dir to point to custom location. -->
    <target name="makedist-simple" depends="call-bootstrap">
        <antcall target="netbeans">
            <param name="scan.binaries" value="true"/>
        </antcall>    
        <antcall target="zipdist"/>
    </target>
  
    <!-- Calls bootstrap target from nbbuild/build.xml to satisfy that nbantext.jar is ready -->
    <target name="call-bootstrap" depends="check-bootstrap" unless="bootstrap-ready">
        <ant dir="../nbbuild" target="bootstrap"/>
    </target>

    <!-- Checks nbantext.jar is up to date -->
    <target name="check-bootstrap">
        <uptodate targetfile="../nbbuild/nbantext.jar" property="bootstrap-ready">
            <srcfiles dir= "../nbbuild/antsrc"/>
        </uptodate>
    </target>
</project>
