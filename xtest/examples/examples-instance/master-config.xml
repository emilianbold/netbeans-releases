<testconfig>

  <!-- Run all unit and logging tests from MyModule -->
  <config name="config-1">
      <module name="MyModule" testtypes="unit,logging" attributes="all,code,ide"/>
  </config>

  <!-- Run all site-specific tests from MyModule for each database -->
  <config name="site-specific" setup="pointbase">
    <property file="${databases.properties}"/>

    <module name="MyModule" testtypes="site-specific" attributes="all,oracle" />
    <module name="MyModule" testtypes="site-specific" attributes="all,mssql" />
    <module name="MyModule" testtypes="site-specific" attributes="all,pointbase" />
    <!-- Or use setup here, if it is needed only for these tests -->
    <!-- <module name="MyModule" testtypes="site-specific" attributes="all,pointbase" setup="pointbase"/> -->
  </config>

  <!-- Used in site-specific config.
       Before tests execution call start target and after execution call stop target.
       Target start will be executed on background and futher execution will be 
       delayed for 3000 ms. -->
  <setup name="pointbase"> 
    <start antfile="${pointbase.setupfile}" target="start" onBackground="true" delay="3000"/>
    <stop antfile="${pointbase.setupfile}" target="stop"/>
  </setup>
  
  <!-- Run all GUI tests from MyModule -->
  <config name="gui">
    <module name="MyModule" testtypes="gui" attributes="all,ide,stable"/>
  </config>
</testconfig>

