<project name="websvc/kit/test/qa-functional" basedir="." default="all">

    <property file="../nbproject/private/private.properties"/>

    <!-- Imports default qa-functional-compiler and runidetest executor.
        jemmy and jellytools jars are on classpath for both. -->
    <import file="../../nbbuild/templates/xtest-qa-functional.xml"/>

    <!-- Run tests on Apache Tomcat server -->
    <target name="-runidetest-with-tomcat" if="tomcat.home">
        <echo>Running tests on Apache Tomcat (using: ${tomcat.home})</echo>
        <property name="xtest.userdata|org.netbeans.modules.tomcat.autoregister.catalinaHome" value="${tomcat.home}"/>
        <property name="xtest.userdata|org.netbeans.modules.tomcat.autoregister.token" value="1"/>
        <antcall target="xtest-qa-functional.runidetest"/>
    </target>

    <!-- Run tests on JBoss server -->
    <target name="-runidetest-with-jboss" if="jboss.home">
        <echo>Running tests on JBoss (using: ${jboss.home})</echo>
        <property name="xtest.userdata|org.netbeans.modules.j2ee.jboss4.installRoot" value="${jboss.home}"/>
        <antcall target="xtest-qa-functional.runidetest"/>
    </target>

    <!-- Run tests on GlassFish based server -->
    <target name="set-gf">
        <condition property="use.appserver">
            <and>
                <not><isset property="jboss.home"/></not>
                <not><isset property="tomcat.home"/></not>
            </and>
        </condition>
    </target>
     
    <target name="-runidetest-with-glassfish" if="use.appserver" depends="set-gf">
        <antcall target="set-appserver-path"/>
        <echo>Running tests on GlassFish (using: ${j2ee.appserver.path})</echo>
        <antcall target="xtest-init.runidetest-with-appserver" />
    </target>

    <!-- Override to run tests on more servers at once -->
    <target name="runidetest-with-appserver" depends="-runidetest-with-glassfish, -runidetest-with-tomcat, -runidetest-with-jboss"/>

</project>

