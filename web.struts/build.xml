<project name="web/struts" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <property name="s2b_root" location="src/org/netbeans/modules/web/struts/config/model"/>
    <property name="s2b_res_root" location="src/org/netbeans/modules/web/struts/resources"/>

    <target name="release" depends="projectized.release">
        <mkdir dir="${cluster}/modules/ext/struts"/>
        <unzip src="external/struts-1.2.9-lib.zip" dest="${cluster}/modules/ext/struts">
            <patternset>
                <include name="struts-1.2.9-lib/antlr.jar"/>
                <include name="struts-1.2.9-lib/commons-beanutils.jar"/>
                <include name="struts-1.2.9-lib/commons-digester.jar"/>
                <include name="struts-1.2.9-lib/commons-fileupload.jar"/>
                <include name="struts-1.2.9-lib/commons-logging.jar"/>
                <include name="struts-1.2.9-lib/commons-validator.jar"/>
                <include name="struts-1.2.9-lib/jakarta-oro.jar"/>
                <include name="struts-1.2.9-lib/struts.jar"/>
            </patternset>
            <mapper type="flatten"/>
        </unzip>
    </target>
 
   <target name="s2binit" depends="build-init">
	<taskdef name="schema2beans" classname="org.netbeans.modules.s2banttask.Schema2BeansAntTask">
	  <classpath>
		<pathelement path="${schema2beans/rt.dir}/modules/org-netbeans-modules-schema2beans.jar" />
		<pathelement path="${nb_all}/schema2beans/dev/schema2beansdev.jar" />
		<pathelement path="${nb_all}/schema2beans/anttask/s2banttask.jar"/>
	  </classpath>
	</taskdef>
    </target>
    
    <target name="s2bgen" depends="s2binit">
     <echo message="generating code generation input file information" />
	<schema2beans schema="${s2b_res_root}/struts-config_1_2-custom.dtd"
	  mddFile="${s2b_res_root}/struts-config_1_2.mdd"
	  package="org.netbeans.modules.web.struts.config.model"
	  validate="false"
	  removeUnreferencedNodes="true"
	  rootDir="src"/>
    </target>
    
    <target name="compile" depends="s2bgen, projectized-common.compile"/>
  
    <target name="clean" depends="clean-s2b-src, projectized-common.clean"/>

    <target name="clean-s2b-src">
        <mkdir dir="${s2b_root}"/>
        <delete>
            <fileset dir="${s2b_root}">
                <include name="*.java"/>
            </fileset>
        </delete>
        <delete dir="${s2b_root}"/>
    </target>

</project>
