########### Syntax Coloring ##################################################################

TOKEN:keyword:( 
    "ACTION" |
    "ANALYZE" |
    "BRACE" |
    "COLOR" | 
    "COMPLETE" |  
    "COMPLETION" | 
    "FOLD" | 
    "HYPERLINK" | 
    "IMPORT" | 
    "INDENT" | 
    "MARK" | 
    "NAVIGATOR" | 
    "PARSE" | 
    "PROPERTIES" | 
    "REFORMAT" |
    "SKIP" | 
    "STORE" | 
    "TOKEN" | 
    "TOOLTIP"
)
TOKEN:identifier: ( ["a"-"z" "A"-"Z"] ["a"-"z" "A"-"Z" "0"-"9" "_"]* )
TOKEN:operator: ( 
    ":" | "*" | "?" | "+" | "-" | "[" | "]" | "<" | ">" |
    "^" | "|" | "{" | "}" | "(" | ")" | "," | "=" | ";" | 
    "." | "$"
)
TOKEN:string:( 
    "\"" 
        (  
            [^ "\"" "\\" "\r" "\n"] | 
            ("\\" ["r" "n" "t" "\\" "\'" "\""]) 
        )* 
    "\""
)
TOKEN:string:( 
    "\'" 
        (  
            [^ "\'" "\\" "\r" "\n"] | 
            ("\\" ["r" "n" "t" "\\" "\'" "\""]) 
        )* 
    "\'"
)
TOKEN:comment: ( "#" [^"\n" "\r"]* ["\n" "\r"]+ )
TOKEN:whitespace:( ["\n" "\r" " " "\t"]+ )

SKIP:comment
SKIP:whitespace

