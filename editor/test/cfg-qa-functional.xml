<mconfig name="qa-functional tests config">
    
    <!-- Editor Test Application's Tests -->

    <!-- Validation tests-->
    <testbag testattribs="commit" name="Editor Commit Validation"
             executor="ide-nogui" timeout="600000">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="general/EditorKitsRegistryTest.class"/>
            </patternset>
        </testset>
    </testbag>
                            
    <!-- Stable -->
    <testbag testattribs="stable,validation" name="Stable Tests">
        <testset dir="qa-functional/src">            
            <patternset>
                <include name="keyboard_shortcuts/*Test.class"/>
                <include name="general/*Test.class"/>
                <include name="popup_menus/MainMenuTest.class"/>                
                <include name="search_replace/SearchAndReplaceTestSuite.class"/>
                <include name="org/netbeans/test/editor/formatting/*.class"/>            
                <exclude name="org/netbeans/test/editor/formatting/BasicTest.class/testReformat"/>
                <exclude name="org/netbeans/test/editor/formatting/BasicTest.class/testReformat2"/>
		<!-- Removing, fails on 1.5.0_12 for some strange reason -->
                <!-- <include name="org/netbeans/test/editor/suites/abbrevs/AbbreviationsAddRemovePerformer.class"/>  -->
            </patternset>
        </testset>
    </testbag>
        
    <!-- Other tests & misc. -->
    <testbag testattribs="others,all" name="Others tests">
        <testset dir="qa-functional/src">
            <patternset>                               
                <include name="keyboard_shortcuts/*Test.class"/>
                <include name="general/*Test.class"/>
                <include name="popup_menus/MainMenuTest.class"/>                            
            </patternset>
        </testset>
    </testbag>
    
    
    <!-- Search and Replace -->
    <testbag testattribs="all,search_replace" name="Search and Replace">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="search_replace/SearchAndReplaceTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- Indentation tests -->
    <testbag testattribs="all,indent" name="indentation-programmatic">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/editor/indentation/programmatic/*Performer.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- Abbreviation dialog test -->
    <testbag testattribs="all,abbrevs" name="abbrev-gui">
        <testset dir="qa-functional/src">
            <patternset>
                <!-- 
                <include name="org/netbeans/test/editor/suites/abbrevs/*Performer.class"/>
                -->
                <include name="org/netbeans/test/editor/suites/abbrevs/AbbreviationsAddRemovePerformer.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- Formatting tests -->
    <testbag testattribs="all,formatting" name="FormattingTests">
        <testset dir="qa-functional/src">
            <patternset>            
                <include name="org/netbeans/test/editor/formatting/*.class"/>            
            </patternset>
        </testset>
    </testbag>
    
    <!-- Key bindings tests  -->    
    <testbag testattribs="keymap,all" name="Key bindings tests">
        <testset dir="qa-functional/src">
            <patternset>            
                <include name="org/netbeans/test/editor/suites/keybindings/KeyMapTest.class"/>            
            </patternset>
        </testset>
    </testbag>
    
    <!-- Syntax highlighting  -->    
    <testbag testattribs="highlight,all" name="Syntax highlighting">
        <testset dir="qa-functional/src">
            <patternset>                              
                <include name="org/netbeans/test/editor/highlight/SyntaxHighlightTest.class"/>            
            </patternset>
        </testset>
    </testbag>
    
    
