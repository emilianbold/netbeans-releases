<?xml version="1.0" encoding="UTF-8"?>
<project name="php.samples" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.php.samples</description>    
    <!--
    <import file="nbproject/build-impl.xml"/>
    -->
    <import file="../nbbuild/templates/projectized.xml"/>
    
    <target name="jar" depends="zip-examples,projectized-common.jar"/>
    
    <target name="zip-examples">
        <property name="examples" location="${build.classes.dir}/org/netbeans/modules/php/samples"/>
        <property name="excludes" value="CVS private build-impl.xml" />
        <mkdir dir="${examples}"/>
        <zip basedir="samples_src/AirAlliance" excludes="${excludes}" destfile="${examples}/AirAlliance.zip"/>
        <zip basedir="samples_src/Jobeet" excludes="${excludes}" destfile="${examples}/Jobeet.zip"/>
        <!--
        <zip basedir="samples_src/Book-O-Rama_E-Shop" excludes="${excludes}" destfile="${examples}/BookORama.zip"/>
        <zip basedir="samples_src/Tahuayo.com" excludes="${excludes}" destfile="${examples}/Tahuayo.zip"/>
        -->        
    </target>
</project>
