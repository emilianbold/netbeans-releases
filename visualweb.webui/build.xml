<?xml version="1.0" encoding="UTF-8"?>

<project name="org.netbeans.modules.visualweb.webui" default="netbeans" basedir=".">

    <description>Builds and tests the project org.netbeans.modules.visualweb.webui.</description>
    <import file="nbproject/build-impl.xml"/>
    <import file="${suite.dir}/templates/common.xml"/>

    <target name="init" depends="library-init,javadoc-zip-init,src-zip-init,harness.init"/>
    
    <!-- Build the J2SE project JAR on which this library wrapper module depends. -->
    <target name="library-init">
        <ant dir="library" target="jar" inheritAll="false"/>
        <mkdir dir="release/modules/ext"/>
        <copy todir="release/modules/ext">
            <fileset dir="library/dist" includes="*.jar"/>
        </copy>
    </target>
    
    <target name="src-zip-init">
        <ant dir="library" target="src-zip" inheritAll="false"/>
        <mkdir dir="release/docs"/>
        <copy todir="release/docs">
            <fileset dir="library/dist" includes="webui-src.zip"/>
        </copy>
    </target>
    
    <target name="javadoc-zip-init">
        <ant dir="library" target="javadoc-zip" inheritAll="false"/>
        <mkdir dir="release/docs"/>
        <copy todir="release/docs">
            <fileset dir="library/dist" includes="webui-doc.zip"/>
        </copy>
    </target>
    
    <target name="clean" depends="library-clean,projectized-common.clean"/>

    <!-- Clean the J2SE project on which this library wrapper module depends. -->
    <target name="library-clean">
        <ant target="clean" dir="library" inheritAll="false"/>
        <delete dir="release"/>
    </target>

</project>
