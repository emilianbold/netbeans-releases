<project name="web/jsf" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>
    
    <property name="s2b_root" location="src/org/netbeans/modules/web/jsf/config/model"/>
    <property name="s2b_res_root" location="src/org/netbeans/modules/web/jsf/resources"/>
    
    <target name="s2binit" depends="build-init">
	<taskdef name="schema2beans" classname="org.netbeans.modules.s2banttask.Schema2BeansAntTask">
	  <classpath>
		<pathelement path="${schema2beans/rt.dir}/modules/org-netbeans-modules-schema2beans.jar" />
		<pathelement path="${nb_all}/schema2beans/dev/schema2beansdev.jar" />
		<pathelement path="${nb_all}/schema2beans/anttask/s2banttask.jar"/>
	  </classpath>
	</taskdef>
    </target>
    
    <target name="s2bgen" depends="s2binit">
     <echo message="generating code generation input file information" />
	<schema2beans schema="${s2b_res_root}/web-facesconfig_1_1.dtd"
	  mddFile="${s2b_res_root}/web-facesconfig_1_1.mdd"
	  package="org.netbeans.modules.web.jsf.config.model"
	  validate="false"
	  removeUnreferencedNodes="true"
	  rootDir="src"/>
    </target>
    
    <target name="compile" depends="s2bgen, projectized-common.compile"/>
  
    <target name="clean" depends="clean-s2b-src, projectized-common.clean"/>

    <target name="clean-s2b-src">
        <mkdir dir="${s2b_root}"/>
        <delete>
            <fileset dir="${s2b_root}">
                <include name="*.java"/>
            </fileset>
        </delete>
        <delete dir="${s2b_root}"/>
    </target>
  
    <target name="netbeans-extra" depends="release"/>

    <target name="release" depends="init">
        <ant dir="../external" target="unscramble"/>
        
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/modules/ext/jsf"/>
        <copy file="../external/jsf-1.1/commons-beanutils.jar"
              todir="${netbeans.dest.dir}/${cluster.dir}/modules/ext/jsf"/>
        <copy file="../external/jsf-1.1/commons-collections.jar"
              todir="${netbeans.dest.dir}/${cluster.dir}/modules/ext/jsf"/>
        <copy file="../external/jsf-1.1/commons-digester.jar"
              todir="${netbeans.dest.dir}/${cluster.dir}/modules/ext/jsf"/>
        <copy file="../external/jsf-1.1/commons-logging.jar"
              todir="${netbeans.dest.dir}/${cluster.dir}/modules/ext/jsf"/>
        <copy file="../external/jsf-1.1/jsf-api.jar"
              todir="${netbeans.dest.dir}/${cluster.dir}/modules/ext/jsf"/>
        <copy file="../external/jsf-1.1/jsf-impl.jar"
              todir="${netbeans.dest.dir}/${cluster.dir}/modules/ext/jsf"/>
	      
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/docs"/>
        <copy file="../external/jsf-1.1/jsf-1.1.01-javadoc.zip"
              todir="${netbeans.dest.dir}/${cluster.dir}/docs"/>
    </target>

</project>
    