<project name="j2ee/platform" default="netbeans" basedir=".">
	<import file="../../nbbuild/templates/projectized.xml"/>

    <target name="files-init" depends="basic-init">
      <patternset id="module.files">
          <include name="${module.jar}"/>
          <include name="${javahelp.jar}" if="has.javahelp"/>
          <include name="${nb.system.dir}/Modules/${code.name.base.dashes}.xml"/>
          <include name="${nb.docs.dir}/j2eeri-1_4-doc-api.zip"/>
      </patternset>
    </target>

	<property name="external" value="../external"/>
	
	<target name="build-init" depends="projectized.build-init"/>

	<echo message="j2ee-api-14 build"/>
	
	<target name="j2ee-api-14-init" depends="build-init">
		<echo message="j2ee-api-14-init"/>
		<ant dir="${external}" target="unscramble"/>
	</target>

	<target name="j2ee-api-14" depends="j2ee-api-14-init">
		<echo message="j2ee-api-14"/>
		<!--
		<mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}/ext"/>
		<copy file="${external}/j2ee-api-1.4.jar"
			  tofile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}/ext/j2ee-api-1.4.jar"/>
		-->
		<!-- javadoc -->
		<copy file="${external}/j2eeri-1_4-doc-api.zip" todir="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}"/>
		<!--
		<copy todir="${netbeans.dest.dir}">
			<fileset dir="../launcher"/>
		</copy>
		-->
	</target>
	
	<target name="compile" depends="j2ee-api-14, projectized.compile"/>

	<target name="clean" depends="projectized.clean">
		<ant dir="${external}" target="clean"/>
		<delete file="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}/j2eeri-1_4-doc-api.zip"/>
	</target>
</project>

