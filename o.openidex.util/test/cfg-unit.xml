<!--
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="openidex unit test config">

    <!-- Tests which should be run before commit to validate IDE. -->


    <testbag testattribs="stable" executor="code" name="Unit tests running in the IDE">
        <testset dir="unit/src">
            <patternset>
                <include name="org/openidex/search/*Test.class"/>
            </patternset>
        </testset>
    </testbag>
    
    
    <executor name="code" antfile="build-unit.xml" target="run-unit-test"/>
    <executor name="ide" antfile="build-unit.xml" target="runidetest"/>
    
    <compiler name="default-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    
</mconfig>
