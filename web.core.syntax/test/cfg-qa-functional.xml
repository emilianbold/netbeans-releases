<mconfig name="QA functional config">

    <!-- STABLE Validation suite for JSP/SYNTAX module -->
    <testbag testattribs="stable, validation, autocompletion" executor="ide_as" name="JSP Syntax autocompletion">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/AutoCompletionTest.class"/>
            </patternset>
        </testset>
    </testbag>   
    
    <testbag testattribs="stable, validation, completion" executor="ide_as" name="JSP Syntax validation">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/CompletionTest.class"/>   
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="tokens" executor="ide" name="Tokens Test">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/TokensTest.class"/>   
                <include name="**/OpenFileTest.class"/>   
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="stable, validation, csscompletion" executor="ide_as" name="CSS Syntax validation">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/CssCompletionTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="indentation, stable" executor="ide_as" name="JSP indentation test cases">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/IndentCasesTest.class"/>
                <include name="**/ReformatingTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- other testcases -->
    <testbag testattribs="j2eecompletion" executor="ide_as" name="JSP Syntax EE5 validation">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/J2EETest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="validation-debug" executor="ide-debug" name="JSP Syntax validation - debug">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/web/core/syntax/JspColoringTest.class"/>
                <include name="org/netbeans/test/web/core/syntax/CompletionTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    <executor name="ide-debug" antfile="build-qa-functional.xml" target="runidetest-debug" default="false"/>
    <executor name="ide_as" antfile="build-qa-functional.xml" target="runidetest_with_appserver"/>
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>
</mconfig>
