<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="openide/util unit test config">

    <!-- Tests which should be run before commit to validate IDE. -->
   
    
    <testbag testattribs="stable" executor="code" name="all openide/util code unit tests">
        <testset dir="">
            <patternset>
                <include name="org/openide/**/*Test.class"/>
            </patternset>
        </testset>
    </testbag>
    
    
    <!--<executor name="code" antfile="build.xml" target="runcodetest"/>
    <executor name="ide" antfile="build.xml" target="runidetest"/>-->
    <executor name="code" antfile="build-unit.xml" target="runcodetest"/>
    <executor name="ide" antfile="build-unit.xml" target="runidetest"/>
    
    <!--<compiler name="unit-compiler" antfile="build.xml" target="unit-compiler" default="true"/>-->
    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>
    
</mconfig>
