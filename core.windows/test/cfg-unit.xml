<!--
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="core/windows unit test config">

    <!-- Tests which should be run before commit to validate IDE. -->
    <testbag testattribs="commit" executor="ide" name="Before Commit Validation">
        <testset dir="unit/src">
            <patternset>
		<include name="**/Validate*Test.class" />
            </patternset>
        </testset>
    </testbag>
  
    <testbag testattribs="stable" executor="unit-executor" name="testbag_1">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/windows/services/DialogDisplayer50960Test.class"/>
                <include name="org/netbeans/core/windows/view/ui/StatusLineElementProviderTest.class"/>
                <include name="org/netbeans/core/windows/view/ui/CustomMenuBarTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="stable" executor="ide" name="testbag_2">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/windows/services/*Test.class"/>
                <include name="org/netbeans/core/windows/view/ui/*Test.class"/>
                <exclude name="org/netbeans/core/windows/view/ui/StatusLineElementProviderTest.class"/>
                <exclude name="org/netbeans/core/windows/view/ui/CustomMenuBarTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="stable" executor="unit-executor" name="testbag_3">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/windows/*Test.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="stable" executor="unit-executor" name="testbag_4">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/windows/persistence/*Test.class"/>
                <exclude name="org/netbeans/core/windows/persistence/WindowManagerParserTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <!-- WindowManager may delete some group data files needed by other unit test so run it in an extra bag --> 
    <testbag testattribs="stable" executor="unit-executor" name="testbag_5">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/windows/persistence/WindowManagerParserTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- If you want to use this testbag you *must* provide xtest.includes property, -->
    <!-- (either on cmd line or in the script) to explicitly define which test       -->
    <!-- you want to run. This will run *only* tests from unit/src folder !!!        -->
    <testbag testattribs="empty" executor="unit-executor" name="testbag_empty" resultsprocessor="unit">
        <testset dir="unit/src"/>
    </testbag>
    <testbag testattribs="emptyide" executor="ide" name="testbag_emptyide" resultsprocessor="unit">
        <testset dir="unit/src"/>
    </testbag>

    <testbag testattribs="dev" executor="unit-executor" name="testbag_dev" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <!-- Add your own unit tests -->
            </patternset>
        </testset>
    </testbag>
    
    <compiler name="default-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    <executor name="unit-executor" antfile="build-unit.xml" target="run-unit-test"/>
    <executor name="ide" antfile="build-unit.xml" target="runidetest"/>

</mconfig>
