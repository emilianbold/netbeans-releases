<project name="org.netbeans.performance.web" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.performance.web</description>

    <property name="test.timeout" value="3600000"/>
    <property environment="env"/>
    <property name="hudson.buildnumber" value="${env.BUILD_NUMBER}"/>
    <property name="hudson.jobname" value="${env.JOB_NAME}"/>

    <loadfile property="perftestrun.buildnumber"
      srcFile="../../../build.number"
      failonerror="false"
    />

    <condition property="j2ee.appserver.path" value="e:\\space\\appserver">
        <os family="windows"/>
    </condition>
    <condition property="j2ee.appserver.path" value="/space/appserver">
        <os family="unix"/>
    </condition>

    <condition property="tomcat.webserver.path" value="e:\\space\\tomcat">
        <os family="windows"/>
    </condition>
    <condition property="tomcat.webserver.path" value="/space/tomcat">
        <os family="unix"/>
    </condition>


    <property name="test.run.args" value="-client -Xss2m -Xms32m -Xmx512m -XX:PermSize=32m -XX:MaxPermSize=200m -Xverify:none -Dsun.java2d.noddraw=true -Dcom.sun.aas.installRoot=&quot;${j2ee.appserver.path}&quot; -Dtomcat.installRoot=&quot;${tomcat.webserver.path}&quot;  -Dorg.netbeans.performance.repeat=&quot;${repeat}&quot;"/>

    <import file="nbproject/build-impl.xml"/>
</project>
