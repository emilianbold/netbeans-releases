<project name="org.netbeans.performance.languages" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.performance.languages</description>

    <property name="test.timeout" value="3600000"/>
    <property environment="env"/>
    <property name="hudson.buildnumber" value="${env.BUILD_NUMBER}"/>
    <property name="hudson.jobname" value="${env.JOB_NAME}"/>

    <loadfile property="perftestrun.buildnumber"
      srcFile="../../../build.number"
      failonerror="false"
    />

    <condition property="glassfish.home" value="c:/space/hudson/glassfish4" else="/space/hudson/glassfish4">
        <os family="windows"/>
    </condition>

    <condition property="tomcat.webserver.path" value="c:\\space\\tomcat">
        <os family="windows"/>
    </condition>
    <condition property="tomcat.webserver.path" value="/space/tomcat">
        <os family="unix"/>
    </condition>

    <property name="test.run.args" value="-Dnetbeans.keyring.no.master=true -client -Xss4m -Xms64m -Xmx1024m -XX:PermSize=64m -XX:MaxPermSize=300m -Xverify:none -Dsun.java2d.noddraw=true -Dglassfish.home=&quot;${glassfish.home}&quot; -Dtomcat.installRoot=&quot;${tomcat.webserver.path}&quot; -Dorg.netbeans.performance.repeat=&quot;${repeat}&quot;"/>

    <import file="nbproject/build-impl.xml"/>
</project>
