<mconfig name="Performance unit tests config">


    <testbag testattribs="measure_ide or measure_startup or temp" prio="1" executor="measure_startup" name="Measure IDE startup time">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/MeasureIDEStartupTime.class/testStartIDE"/>
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="measure_ide or measure_startup or measure_complex_startup" prio="3" executor="measure_startup_opened_files_prepare" name="Prepare IDE for measure startup time with opened files">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/MeasureIDEStartupTimeOpenedFilesPrepare.class"/>
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="measure_ide or measure_startup or measure_complex_startup" prio="4" executor="measure_startup_opened_files" name="Measure IDE startup time">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/MeasureIDEStartupTime.class/testStartIDEWithOpenedFiles"/>
	    </patternset>
	</testset>
    </testbag>

    <testbag testattribs="measure_ide or measure_memory" prio="2" executor="measure_ide_memory_consumption" name="Measure baseline memory footprint">
	<testset dir="unit/src">
	    <patternset>
		<include name="memory/MeasureBaselineMemoryFootprint.class/testMemoryFootprintAfterStart"/>		
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="measure_ide or measure_warmup" prio="2" executor="measure_warmup" name="Measure warm up">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/MeasureWarmUp.class/testWarmUp"/>		
	    </patternset>
	</testset>
    </testbag>
    
<!-- END Property Editors testbag -->
    
    <executor name="measure_startup" antfile="build-unit.xml" target="runcodetest_measure_startup"/>
    <executor name="measure_startup_opened_files_prepare" antfile="build-unit.xml" target="runcodetest_measure_complex_startup_prepare"/>
    <executor name="measure_startup_opened_files" antfile="build-unit.xml" target="runcodetest_measure_complex_startup"/>
    <executor name="measure_warmup" antfile="build-unit.xml" target="runcodetest_measure_warmup"/>
    
    <executor name="measure_ide_memory_consumption" antfile="build-unit.xml" target="runidetest_measure_memory"/>
    
    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>
    
</mconfig>
