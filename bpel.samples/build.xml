    <!-- 
    netbeans-extra is a hook provided to plug in file copying. 
    If you're adding compile dependencies on 3rd party jars 
    (jgraph, jdom, etc.), uncomment this section ...
    -->
    <target name="jar" depends="zip-soa-trs-sample,
    zip-soa-rps-sample,
    zip-soa-trsapp-sample,
    zip-soa-synchronous-sample,
    zip-soa-asynchronous-sample,
    zip-soa-synchronousapplication-sample,
    zip-soa-asynchronousapplication-sample,
    zip-soa-blueprint-sample,                                
    zip-soa-blueprintapplication-sample,
    projectized-common.jar"/>

                              
    <!-- initialize necessary properties for SOA sample targets-->
    <target name="init-zip-samples">
        <property name="soa.samples" value="org/netbeans/modules/bpel/samples"/>
        <property name="soa.samples.resources" value="src/${soa.samples}/resources"/>
        <property name="build.soa.samples.resources" value="build/classes/${soa.samples}/resources"/>
    </target>

    <!-- Target for SOA TravelReservationService sample -->
    <target name="zip-soa-trs-sample" depends="init-zip-samples">
        <property name="soa.samples.trs" value="src/${soa.samples}/TravelReservationService"/>

        <zip destfile="${soa.samples.resources}/TravelReservationService.zip"
        basedir="${soa.samples.trs}"
        update="true"
        />
    </target>

    <!-- Target for SOA ReservationPartnerServicesApplication required by TravelReservationService sample -->
    <target name="zip-soa-rps-sample" depends="init-zip-samples">
        <zip destfile="${soa.samples.resources}/ReservationPartnerServices.zip"
            update="true"
            >
            <zipfileset dir="ReservationPartnerServices" prefix="ReservationPartnerServices"/>
        </zip>
    </target>
    
    <!-- Target for SOA TravelReservationService application sample -->
    <target name="zip-soa-trsapp-sample" depends="init-zip-samples">
        <zip destfile="${soa.samples.resources}/TravelReservationServiceApplication.zip"            
            update="true"
            >
            <zipfileset dir="TravelReservationServiceApplication"/>
        </zip>
    </target>    
    
    <!-- Target for Synchronous sample -->
    <target name="zip-soa-synchronous-sample" depends="init-zip-samples">
        <property name="soa.samples.synchronous" value="src/${soa.samples}/SynchronousSample"/>
        <zip destfile="${soa.samples.resources}/SynchronousSample.zip"
        basedir="${soa.samples.synchronous}"
        update="true"
        />
    </target>
    
    <!-- Target for asynchronous sample -->
    <target name="zip-soa-asynchronous-sample" depends="init-zip-samples">
        <property name="soa.samples.asynchronous" value="src/${soa.samples}/AsynchronousSample"/>
        <zip destfile="${soa.samples.resources}/AsynchronousSample.zip"
        basedir="${soa.samples.asynchronous}"
        update="true"
        />
    </target>    
    
    
    
    <!-- Target for Synchronous Composite application sample -->
    <target name="zip-soa-synchronousapplication-sample" depends="init-zip-samples">
        <zip destfile="${soa.samples.resources}/SynchronousSampleApplication.zip"            
            update="true">
            <zipfileset dir="SynchronousSampleApplication"/>
        </zip>
    </target>   
    
    <!-- Target for Asynchronous Composite application sample -->
    <target name="zip-soa-asynchronousapplication-sample" depends="init-zip-samples">
        <zip destfile="${soa.samples.resources}/AsynchronousSampleApplication.zip"            
            update="true">
            <zipfileset dir="AsynchronousSampleApplication"/>
        </zip>
    </target>   



        
        
    <!-- Target for blueprints samples. -->
    <target name="zip-soa-blueprint-sample" depends="init-zip-samples">
        <property name="soa.samples.blueprint1" value="BluePrint1"/>
        <property name="soa.samples.blueprint2" value="BluePrint2"/>
        <property name="soa.samples.blueprint3" value="BluePrint3"/>
        <property name="soa.samples.blueprint4" value="BluePrint4"/>
        <property name="soa.samples.blueprint5" value="BluePrint5"/>
      
        <zip destfile="${soa.samples.resources}/${soa.samples.blueprint1}.zip"
        basedir="src/${soa.samples}/blueprints/${soa.samples.blueprint1}"
        update="true" />
        <zip destfile="${soa.samples.resources}/${soa.samples.blueprint2}.zip"
        basedir="src/${soa.samples}/blueprints/${soa.samples.blueprint2}"
        update="true" />
        <zip destfile="${soa.samples.resources}/${soa.samples.blueprint3}.zip"
        basedir="src/${soa.samples}/blueprints/${soa.samples.blueprint3}"
        update="true" />
        <zip destfile="${soa.samples.resources}/${soa.samples.blueprint4}.zip"
        basedir="src/${soa.samples}/blueprints/${soa.samples.blueprint4}"
        update="true" />
        <zip destfile="${soa.samples.resources}/${soa.samples.blueprint5}.zip"
        basedir="src/${soa.samples}/blueprints/${soa.samples.blueprint5}"
        update="true" />
    </target>      
    
  
    
    
    <!-- Target for Synchronous Composite application sample -->
    <target name="zip-soa-blueprintapplication-sample" depends="init-zip-samples">
        <property name="soa.samples.blueprint1.compapp" value="BluePrint1Application"/>
        <property name="soa.samples.blueprint2.compapp" value="BluePrint2Application"/>
        <property name="soa.samples.blueprint3.compapp" value="BluePrint3Application"/>      
        <property name="soa.samples.blueprint4.compapp" value="BluePrint4Application"/>
        <property name="soa.samples.blueprint5.compapp" value="BluePrint5Application"/>   
        <zip destfile="${soa.samples.resources}/${soa.samples.blueprint1.compapp}.zip"            
            update="true">
            <zipfileset dir="blueprints/${soa.samples.blueprint1.compapp}"/>
        </zip>
        <zip destfile="${soa.samples.resources}/${soa.samples.blueprint2.compapp}.zip"            
            update="true">
            <zipfileset dir="blueprints/${soa.samples.blueprint2.compapp}"/>
        </zip>
        <zip destfile="${soa.samples.resources}/${soa.samples.blueprint3.compapp}.zip"            
            update="true">
            <zipfileset dir="blueprints/${soa.samples.blueprint3.compapp}"/>
        </zip>
        <zip destfile="${soa.samples.resources}/${soa.samples.blueprint4.compapp}.zip"            
            update="true">
            <zipfileset dir="blueprints/${soa.samples.blueprint4.compapp}"/>
        </zip>
        <zip destfile="${soa.samples.resources}/${soa.samples.blueprint5.compapp}.zip"            
            update="true">
            <zipfileset dir="blueprints/${soa.samples.blueprint5.compapp}"/>
        </zip>    
    </target>       
    

    
    
</project>

