<mconfig name="java/source">
    
    <testbag testattribs="stable" executor="unit-executor" name="java/source">
        <testset dir="unit/src">
            <patternset>
                <include name="**/*Test.class"/>
                <exclude name="org/netbeans/api/java/source/JavaSourceTest.class/testJavaSourceIsReclaimable" />
                <exclude name="org/netbeans/modules/java/source/usages/CompromiseSATest.class/testClassSignatureFromElement" />
                <exclude name="org/netbeans/modules/java/source/BasicPerformanceTest.class" />
                <exclude name="org/netbeans/modules/java/source/parsing/CachingFileManagerTest.class" />
                <exclude name="org/netbeans/modules/java/source/parsing/PerfJavacIntefaceGCTest.class" />
                <exclude name="org/netbeans/modules/java/source/parsing/PerfResolveTest.class" />
                <exclude name="org/netbeans/modules/java/source/parsing/PerfBatchCompilationTest.class" />
                <exclude name="org/netbeans/api/java/source/gen/AnnotationOnLocVarTest.class/testAddLocVarWithAnn" />
                <exclude name="org/netbeans/api/java/source/gen/FieldTest2.class" />
                <exclude name="org/netbeans/api/java/source/gen/FieldTest3.class" />
                <exclude name="org/netbeans/api/java/source/gen/FieldTest4.class" />
                <exclude name="org/netbeans/api/java/source/gen/Field5Test.class" />
                <exclude name="org/netbeans/api/java/source/gen/Field6Test.class" />
                <exclude name="org/netbeans/api/java/source/gen/GeneratorTest.class" />
                <exclude name="org/netbeans/api/java/source/gen/MethodTest2.class" />
                <exclude name="org/netbeans/api/java/source/gen/MethodTest3.class" />
                <exclude name="org/netbeans/api/java/source/gen/MethodBodyTextTest.class"/>
                <exclude name="org/netbeans/api/java/source/gen/LabelsTest.class"/>
                <exclude name="org/netbeans/api/java/source/gen/CompareTreeTest.class"/>
                <exclude name="org/netbeans/api/java/source/gen/MethodCreationTest.class"/>
                <exclude name="org/netbeans/api/java/source/gen/MemberAdditionTest.class"/>
                <exclude name="org/netbeans/api/java/source/gen/IndentAddedElemTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="generator" executor="unit-executor" name="modifying sources">
        <testset dir="unit/src">
            <patternset>
                <!-- temporarily excluded. Filter syntetic constructors -->
                <include name="org/netbeans/api/java/source/gen/ConstructorTest.class"/>
                <include name="org/netbeans/api/java/source/gen/ConstructorRenameTest.class"/>
                <include name="org/netbeans/api/java/source/gen/Method1Test.class"/>
                <include name="org/netbeans/api/java/source/gen/MethodTest4.class"/>
                <include name="org/netbeans/api/java/source/gen/PackageTest.class"/>
                <include name="org/netbeans/api/java/source/gen/MethodParametersTest.class"/>
                <include name="org/netbeans/api/java/source/gen/MethodTypeParametersTest.class"/>
                <include name="org/netbeans/api/java/source/gen/MethodThrowsTest.class"/>
                <include name="org/netbeans/api/java/source/gen/ImportsTest.class"/>
                <include name="org/netbeans/api/java/source/gen/ImportFormatTest.class"/>
                <include name="org/netbeans/api/java/source/gen/ClassImplementsTest.class"/>
                <include name="org/netbeans/api/java/source/gen/InterfaceExtendsTest.class"/>
                <include name="org/netbeans/api/java/source/gen/ClassExtendsTest.class"/>
                <include name="org/netbeans/api/java/source/gen/FieldTest1.class"/>
                <include name="org/netbeans/api/java/source/gen/VarArgsTest.class"/>
                <include name="org/netbeans/api/java/source/gen/ClassMemberTest.class"/>
                <include name="org/netbeans/api/java/source/gen/FeatureAddingTest.class"/>
                <include name="org/netbeans/api/java/source/gen/AddCastTest.class"/>
                <include name="org/netbeans/api/java/source/gen/BodyStatementTest.class"/>
                
                <!--
                Makes many operation on field declaration.
                -->

                <!-- <include name="org/netbeans/api/java/source/gen/CompareTreeTest.class"/> -->
                <!-- <include name="org/netbeans/api/java/source/gen/LabelsTest.class"/> -->
                <!-- <include name="org/netbeans/api/java/source/gen/FieldTest3.class"/> -->
                <!-- <include name="org/netbeans/api/java/source/gen/FieldTest4.class"/> -->
                <!-- <include name="org/netbeans/api/java/source/gen/AnnotationOnLocVarTest.class/testAddLocVarWithAnn"/> -->
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="single" executor="unit-executor" name="modifying sources">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/api/java/source/gen/ConstructorTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="issue" executor="unit-executor" name="modifying sources">
        <testset dir="unit/src">
            <patternset>
                <!--
                Used for changing all labels, i.e. method name, break label, continue label,
                class name, labeled statement, member select and identifier.

                Note: Currently, changing member select in variable declarator does not work. It is
                not reported.
                -->
                <include name="org/netbeans/api/java/source/gen/LabelsTest.class"/> 
                
                <!--
                Second test method corrupts the source. Details are not available yet.
                -->
                <include name="org/netbeans/api/java/source/gen/AnnotationOnLocVarTest.class"/>
                
                <!--
                Three method for testing body provided as a text.
                Current problems:
                * Methods are in tests - not possible to add them to the TreeMaker as they need
                  to know SourceUtils class. Method will be defined in java/source module.
                * generator adds extra empty statement ';' when setting body
                * how to generate comments with the statements? It is not possible to add them
                * immediately in text.
                -->
                <include name="org/netbeans/api/java/source/gen/MethodBodyTextTest.class"/>
                
                <!-- <include name="org/netbeans/api/java/source/gen/CompareTreeTest.class"/> -->
                <!-- <include name="org/netbeans/api/java/source/gen/FieldTest2.class"/> -->
                <!-- <include name="org/netbeans/api/java/source/gen/FieldTest3.class"/> -->
                <!-- <include name="org/netbeans/api/java/source/gen/FieldTest4.class"/> -->
            </patternset>
        </testset>
    </testbag>
        
    <testbag testattribs="qa" executor="unit-executor" name="modifying sources">
        <testset dir="unit/src">
            <patternset>
                <!-- Test indentation (issue 87542) -->
                <include name="org/netbeans/api/java/source/gen/IndentAddedElemTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <compiler name="default-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    <executor name="unit-executor" antfile="build-unit.xml" target="run-unit-test"/>
    
</mconfig>
