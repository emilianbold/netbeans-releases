<project basedir="." default="netbeans" name="web/core">
    <import file="../../nbbuild/templates/projectized.xml"/>
    
    <property name="s2b_root" location="src/org/netbeans/modules/web/taglib/model"/>
    <property name="s2b_res_root" location="src/org/netbeans/modules/web/taglib/resources"/>
    
    <target name="s2binit" depends="build-init">
	<taskdef name="schema2beans" classname="org.netbeans.modules.s2banttask.Schema2BeansAntTask">
	  <classpath>
		<pathelement path="${schema2beans/rt.dir}/${nb.modules.dir}/org-netbeans-modules-schema2beans.jar" />
		<pathelement path="${nb_all}/schema2beans/dev/schema2beansdev.jar" />
		<pathelement path="${nb_all}/schema2beans/anttask/s2banttask.jar"/>
	  </classpath>
	</taskdef>
    </target>
    
    <target name="s2bgen" depends="s2binit">
     <echo message="generating code generation input file information" />
	<schema2beans schema="${s2b_res_root}/web-jsptaglibrary_2_0.xsd"
	  mddFile="${s2b_res_root}/web-jsptaglibrary_2_0.mdd"
	  package="org.netbeans.modules.web.taglib.model"
	  schemaType="xmlschema"
	  validate="true"
	  removeUnreferencedNodes="true"
	  rootDir="src"/>
    </target>
    
    <target name="compile" depends="s2bgen, projectized.compile"/>
  
    <target name="clean" depends="clean-s2b-src, projectized.clean"/>

    <target name="clean-s2b-src">
        <mkdir dir="${s2b_root}"/>
        <delete>
            <fileset dir="${s2b_root}">
                <include name="*.java"/>
            </fileset>
        </delete>
        <delete dir="${s2b_root}"/>
    </target>
  
    <target name="jar-with-module-deps" if="module.dependencies">
        <property file="../ddapi/spec-ver.properties"/>
        <property file="../../xml/spec-vers.properties"/>
        <property file="../spec-vers.properties"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" compress="false" manifest="${manifest.mf}">
            <manifest>
                <attribute name="OpenIDE-Module-Public-Packages" value="-"/>
                <attribute name="OpenIDE-Module-IDE-Dependencies" value="${ide.dependencies}"/>
                <attribute name="OpenIDE-Module-Module-Dependencies" value="org.netbeans.modules.java/1,
  org.netbeans.modules.j2eeserver/3,
  org.netbeans.modules.schema2beans/1,
  org.netbeans.modules.html/1,
  org.netbeans.api.xml/1,
  org.netbeans.modules.xml.core/2 = ${xml.common.impl.version},
  org.netbeans.modules.xml.catalog/2 > 0.9,
  org.openide.src > 1.3,
  org.openide.io > 1.0,
  org.netbeans.core/1 > 1.0,
  org.netbeans.modules.web.jspparser/2,
  org.netbeans.modules.web.core.syntax/1,
  org.netbeans.api.web.webmodule > 1.0,
  org.netbeans.api.java/1,
  org.netbeans.modules.java.project/1,
  org.netbeans.modules.j2ee.dd/1 = 1.0,
  org.netbeans.modules.projectapi/1,
  org.netbeans.modules.projectuiapi/1,
  org.apache.tools.ant.module/3,
  org.netbeans.core.multiview/1,
  org.netbeans.modules.xml.multiview/1 = 1.0-release41,
  org.netbeans.libs.xerces/1"/>
                <attribute name="OpenIDE-Module-Implementation-Version" value="${web.core.impl.version}"/>
                <attribute name="OpenIDE-Module-Build-Version" value="${buildnumber}"/>
            </manifest>
            <fileset dir="${build.classes.dir}"/>
        </jar>
    </target>
    
</project>
