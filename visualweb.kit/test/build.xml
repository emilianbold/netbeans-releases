<project basedir="." default="all" name="visualweb.kit/test">

    <!-- Name of tested module   -->
    <property name="xtest.module" value="visualweb.kit"/>
    
    <import file="../../nbbuild/templates/xtest.xml"/>

    <!-- default testtypes, attributes used when no value is supplied from command line -->
    <property name="xtest.testtype" value="qa-functional"/>
    <property name="xtest.attribs" value="all"/>
    <!-- Set xtest.ide.error.manager to false only if need to disable all Exception thrown by IDE-->
    <property name="xtest.ide.error.manager" value="true"/>

    <target name="nb_dest">
	<condition property="is.nb_dest_dir_not_set">
	    <not>	    
	        <isset property="netbeans.dest.dir"/>
	    </not>   
	</condition>
    </target>

    <target name="netbeans_dest_dir_set" depends="nb_dest" unless="is.nb_dest_dir_not_set">
        <echo>Setting netbeans.home property to ${netbeans.dest.dir}</echo>
	<property name="netbeans.home" value="${netbeans.dest.dir}"/>
    </target>

    <target name="nb_home">
        <condition property="is.nb_home_not_set">
            <not>
                <isset property="netbeans.home"/>
            </not>
        </condition>
    </target>

    <target name="netbeans_home_not_set" depends="netbeans_dest_dir_set,nb_home" if="is.nb_home_not_set">
        <property name="netbeans.home" location="../../nbbuild/netbeans"/>
        <echo>Setted netbeans.home property to ${netbeans.home}</echo>
    </target>

    <target name="netbeans_dest_dir_not_set" depends="nb_dest" if="is.nb_dest_dir_not_set">
        <property name="netbeans.dest.dir" location="../../nbbuild/netbeans"/>
        <echo>Setted netbeans.dest.dir property to ${netbeans.dest.dir}</echo>
    </target>

    <target name="compile" depends="netbeans_dest_dir_not_set,netbeans_home_not_set">
    </target>

    <target name="sanitytests" depends="compile">
        <ant dir="." target="runtests">
	    <property name="xtest.attribs" value="sanity"/>
        </ant>
    </target>

    <target name="set-commit-validation-target">
        <property name="commit.validation.target" value="sanitytests"/> 
    </target>

    <target name="commit-validation" 
            depends="set-commit-validation-target,commitValidation, no-commit-validation, no-test-properties"
            description="Runs tests to validate IDE before commit."/>

    <target name="commitValidation" depends="check-commit-validation" if="run.validation">
        <!--property name="xtest.home" location="../../xtest"/-->
        <ant dir="../gravy" target="clean"/>
        <!--exec dir="${basedir}/../kit/gravy" executable="ant" failonerror="yes"/-->
        <ant dir="../../jemmy" target="jar"/>
        <ant dir="${basedir}/../gravy" target="jar">
            <property name="no.deps" value="true"/>
            <property name="java.version.excludes" location="${basedir}/../../jemmy/util/${ant.java.version}.excludes"/>
        </ant>    
        <ant dir="." target="${commit.validation.target}"/>
        <delete dir="../../../nbbuild/netbeans/extra"/> <!-- #114661 -->
    </target>

    <target name="check-commit-validation">
        <condition property="run.validation">
            <and>
                <!--available file="../kit/test/build.xml"/-->
                <available file="../gravy/build.xml"/>
                <available file="../../jemmy/build.xml"/>
                <available file="../../jellytools/build.xml"/>
                <available file="../../xtest/build.xml"/>
                <available file="../../testtools/external/httpunit.jar"/>
            </and>
        </condition>
    </target>
    
    <target name="check-test-properties">
        <condition property="have.properties">
            <available file="./data/DefaultDeploymentTargets.properties"/>
        </condition>
    </target>
    
    <target name="no-test-properties" depends="check-test-properties" unless="have.properties">
        <fail>
            visualweb/test/data/DefaultDeploymentTargets.properties is absent. 
            Copy DefaultDeploymentTargets.properties.template to DefaultDeploymeye ntTargets.properties
            and edit it manally, set location af Glassfish Application Server
        </fail>
    </target>
    
    <target name="no-commit-validation" depends="check-commit-validation" unless="run.validation">
        <echo>
            *** WARNING ***
            You do not seem to have the modules needed to run the commit validation test suite. 
            You may not commit any changes into the CVS repository without running these tests.
            For more information: http://www.netbeans.org/community/guidelines/commit.html
            
            Run checkout-test-tools target to get necessary modules from cvs repository
        </echo>
    </target>
    
    <target name="build-test-tools" depends="checkout-test-tools">
        <!--ant dir="../../xtest" target="makedist-simple"-->
        <ant dir="${xtest.home}" target="makedist-simple"/>
           <!--property name="netbeans.dest.dir" value="${basedir}/../../nbbuild/netbeans"/>
        </ant-->
        <!--ant dir="${basedir}/../../jellytools">
           <property name="netbeans.dest.dir" value="${basedir}/../../nbbuild/netbeans"/>
        </ant-->
        <ant dir="${basedir}/../../jemmy"/>
    </target>

    <target name="checkout-test-tools" depends="check-commit-validation" unless="run.validation">
        <!--property name="cvsroot" value=":pserver:anoncvs@cvs.netbeans.org:/cvs"/-->
        <property name="cvsroot" value="${env.CVSROOT}"/>
        <cvs command="checkout -P" compressionlevel="6" cvsroot="${cvsroot}" dest="../../.." 
            package="testtools/external jemmy jellytools xtest core/javahelp/external nbbuild junit/external" 
            quiet="true" failonerror="true"/>
    </target>    

</project>
