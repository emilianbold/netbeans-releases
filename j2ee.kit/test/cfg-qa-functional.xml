<mconfig name="qa-functional tests config">
    
    <testbag testattribs="validation,cmp" executor="ide_as" name="CMP">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/AppServerTest.class"/>
                <include name="org/netbeans/test/j2ee/cmp/GenerateEntityClassesTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="validation,ejb" executor="ide_as" name="EJB, FreeForm">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/AppServerTest.class"/>
                <!-- Disabled until updated.
                <include name="org/netbeans/test/j2ee/FreeFormProjects.class"/>
                -->
                <include name="org/netbeans/test/j2ee/EJBValidation.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="validation,wizards" executor="ide_as" name="J2EE wizards">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/AppServerTest.class"/>
                <include name="org/netbeans/test/j2ee/J2eeProjectsTest.class"/>
            </patternset>
        </testset>
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/wizard/WizardsTest.class"/>
                <include name="org/netbeans/test/j2ee/wizard/WizardsJavaEE5Test.class"/>
            </patternset>
        </testset>
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/wizard/MultiSrcRootModsWizardsTest.class"/>
                <include name="org/netbeans/test/j2ee/libraries/LibraryTest.class"/>
            </patternset>
        </testset>
    </testbag>
        
    <testbag testattribs="validation,multiview" executor="ide_as" name="Multiview editor">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/AppServerTest.class"/>
                <include name="org/netbeans/test/j2ee/multiview/EjbModuleTest.class"/>
                <include name="org/netbeans/test/j2ee/multiview/EBDetailsAndCMPFieldPanelTest.class"/>
                <include name="org/netbeans/test/j2ee/multiview/EBGeneralAndClassPanelTest.class"/>
                <include name="org/netbeans/test/j2ee/multiview/CMPRelationshipsTest.class"/>
                <include name="org/netbeans/test/j2ee/multiview/WebProjectDDTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="validation,hints" executor="ide_as" name="HINTS TESTS">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/hints/EntityRelations.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="validation,persistence" executor="ide_as" name="Persistence units editor">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/persistence/PersistenceUnitTest.class"/>
            </patternset>
        </testset>
    </testbag>   
    
    <testbag testattribs="validation,identity" executor="ide_as" name="Identity support validation (basic)">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/IdentityValidation.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="serverplugins" executor="ide-serverplugins" name="ServerPlugins validation">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/serverplugins/jboss/JBossTestSuite.class"/>
                <include name="org/netbeans/test/j2ee/serverplugins/glassfish/GlassfishTestSuite.class"/>
                <include name="org/netbeans/test/j2ee/serverplugins/weblogic/WeblogicTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    <executor name="ide_as" antfile="build-qa-functional.xml" target="runidetest-with-appserver"/>
    <executor name="ide-serverplugins" antfile="build-qa-functional.xml" target="runidetest-serverplugins"/>
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>
    
    
</mconfig>
