<project name="org.netbeans.modules.j2me.cdc.project.ricoh" default="netbeans" basedir=".">

    <import file="../../../nbbuild/templates/projectized.xml"/>
				         	
    <target name="compile" depends="projectized-common.compile">
	<mkdir dir="build/classes/org/netbeans/modules/j2me/cdc/project/ricoh/resources/samples"/>
	<copy todir="build/classes/org/netbeans/modules/j2me/cdc/project/ricoh/resources/samples">
	    <fileset dir="external/samples" includes="*.zip"/>
	</copy>
        
	<mkdir dir="build/antclasses"/>
        <javac srcdir="antsrc" destdir="build/antclasses" source="1.4" debug="true" deprecation="true">
            <classpath>
                <path refid="cp"/>
                <pathelement location="${ant.jar}"/>
                <pathelement location="${tools.jar}"/>
                <pathelement location="${cluster}/${module.jar}"/>
            </classpath>
        </javac>
        <copy todir="build/antclasses">
            <fileset dir="antsrc" excludesfile="../../standard-jar-excludes.txt"/>
        </copy>
        <mkdir dir="build/ant" />
        <jar jarfile="build/ant/org-netbeans-modules-j2me-cdc-project-ricoh.jar" compress="false">
            <fileset dir="build/antclasses">
                <excludesfile name="../../standard-jar-excludes.txt"/>
            </fileset>
        </jar>
    </target>

</project>
