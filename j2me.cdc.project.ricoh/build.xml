<project name="org.netbeans.modules.j2me.cdc.project.ricoh" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.j2me.cdc.project.ricoh.</description>
    <import file="../../../nbbuild/templates/projectized.xml"/>

    <target name="ext" depends="init,jar">
        <mkdir dir="build/antclasses"/>
        <javac srcdir="antsrc" destdir="build/antclasses" source="1.4" debug="true" deprecation="true">
            <classpath>
                <path refid="cp"/>
                <pathelement location="${ant.jar}"/>
                <pathelement location="${tools.jar}"/>
                <pathelement location="${cluster}/${module.jar}"/>
            </classpath>
        </javac>
        <copy todir="build/antclasses">
            <fileset dir="antsrc" excludesfile="../../standard-jar-excludes.txt"/>
        </copy>
        <mkdir dir="${cluster}/modules/ext"/>
        <jar jarfile="${cluster}/modules/ext/${code.name.base.dashes}.jar" compress="false">
            <fileset dir="build/antclasses">
                <excludesfile name="../../standard-jar-excludes.txt"/>
            </fileset>
        </jar>
    </target>

    <target name="release" depends="init">
        <echo message="releasing..."/>
        <mkdir dir="${cluster}/external"/>    
        <copy todir="${cluster}/external">
            <fileset dir="release/external" excludes="*.txt"/>
        </copy>
    </target>	

    <target name="netbeans-extra" depends="ext,release"/>
</project>
