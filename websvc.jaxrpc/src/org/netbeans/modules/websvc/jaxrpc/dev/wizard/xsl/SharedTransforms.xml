<xsl:stylesheet version="1.0"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  <xsl:output method="text" encoding="UTF-8"/>
  <xsl:template match="bean">

   <xsl:variable name="class-file-type">
    <xsl:call-template name="file-type"/>
  </xsl:variable>

  <xsl:variable name="class-type">
    <xsl:call-template name="class-type"/>
  </xsl:variable>

   <xsl:if test="classname[string-length(@package) > 0]">package <xsl:value-of select="classname/@package"/>;
   </xsl:if>

/**
 * This is the <xsl:value-of select="$class-file-type"/> for the <xsl:value-of select="comment-data/@ws-name"/> <xsl:value-of select="$class-type"/>.
 * Created <xsl:value-of select="comment-data/@date"/>
 * @author <xsl:value-of select="comment-data/@author"/>
 */<xsl:call-template name="generate-class"/>
  </xsl:template>
    
</xsl:stylesheet> 
