<mconfig name="QA functional config">

    <!-- Validation suite for whole IDE before commit-->
    <testbag testattribs="commit or stable" executor="ide" name="IDE commit validation" timeout="900000">
        <testproperty name="xtest.ide.blacklist" value="blacklist.txt"/>
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/ide/IDECommitValidation.class"/>
                <include name="org/netbeans/test/editor/MultiviewEditorReflectionTest.class"/>
                <!-- A test case can be marked as "expected fail" until an issue causing the failure is fixed.
                     It saves time when developers are looking for reason of failure
                     and the failure is caused by one of previous commits.
                <include name="org/netbeans/test/ide/IDECommitValidation.class/testEditor" expectedFail="Fails because of copy/paste doesn't work (#40785)"/>
                -->
            </patternset>
        </testset>
    </testbag>
    
    <!-- Validation suite for CND cluster. -->
    <testbag testattribs="cnd" executor="ide" name="CND commit validation" timeout="900000">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/cnd/CNDValidation.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- Validation suite for profiler cluster. -->
    <testbag testattribs="profiler" executor="ide" name="Profiler commit validation" timeout="900000">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/profiler/ProfilerValidation.class"/>
            </patternset>
        </testset>
    </testbag>

    <!-- Validation suite for profiler cluster. -->
    <testbag testattribs="j2ee" executor="ide" name="J2EE commit validation" timeout="900000">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/J2EEValidation.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- Validation suite for ruby cluster. -->
    <testbag testattribs="ruby" executor="ide" name="Ruby commit validation" timeout="900000">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/ruby/RubyValidation.class"/>
            </patternset>
        </testset>
    </testbag>

    <!-- Validation suite for whole IDE -->
    <testbag testattribs="validation" executor="ide" name="IDE validation">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/ide/IDEValidation.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    <executor name="ide-appserver" antfile="build-qa-functional.xml" target="runidetest-with-appserver"/> 
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>
</mconfig>
