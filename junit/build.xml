<project name="junit" default="netbeans" basedir=".">

    <import file="../nbbuild/templates/projectized.xml"/>

    <target name="netbeans-extra" depends="release"/>

    <target name="release" depends="init">
        <ant dir="external" target="unscramble"/>
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}"/>
        <copy file="external/junit-3.8.1-api.zip" todir="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}"/>
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext"/>
        <copy todir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext">
            <fileset dir="external">
                <include name="junit*.jar"/>
            </fileset>
        </copy>
    </target>

    <target name="nbm" depends="init,netbeans" description="Build NBM archive.">
        <mkdir dir="build"/>
        <makenbm file="build/${nbm}"
                 productdir="${netbeans.dest.dir}/${cluster.dir}"
                 module="${module.jar}"
                 homepage="${nbm.homepage}"
                 distribution="http://${dist.base}/${nbm}"
                 needsrestart="${nbm.needs.restart}"
                 releasedate="${nbm.release.date}"
		 moduleauthor="${nbm.module.author}">
            <license name="junit-license.txt">
                <text>For the JUnit module itself:</text>
                <file location="${license.file}"/>
                <text>For the JUnit framework:</text>
                <file location="external/ibm-public-license.txt"/>
            </license>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

</project>
