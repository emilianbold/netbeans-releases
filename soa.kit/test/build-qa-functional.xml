<project name="soa.kit/test-qa-functional" basedir="." default="all">

    <property name="xtest.ide.commandline.suffix" value="-J-Dnetbeans.javacore.noscan=true"/>
    <property name="xtest.ide.open.project" location="${xtest.data}/XSLTTestProject"/>

    <property name="test.qa-functional.runtime.cp" value=""/>
    <property name="test.qa-functional.compile.cp" value=""/>

    <import file="../../nbbuild/templates/xtest-qa-functional.xml"/>

    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->

    <!-- You can override default qa-functional-compiler if you need something special -->

    <target name="qa-functional-compiler" depends="init-cp">
        <buildTests srcDir="qa-functional/src" compileExcludes="**/data/**">
            <classpath>
                <pathelement location="../../jemmy/builds/jemmy.jar"/>                    
                <pathelement location="../../jellytools/builds/jelly2-nb.jar"/>
                <pathelement location="${xtest.home}/lib/junit.jar"/>                    
                <pathelement location="${xtest.home}/lib/nbjunit.jar"/> 
            </classpath>
        </buildTests>
    </target>
    
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <!--This target executes tests inside IDE. It is defined in default-build-qa-functional.xml.
         If you need to customize it, you can uncomment the following and override it.-->

    <target name="runidetest">        
        <executeTests  pluginName="ide">
            <classpath>
                <pathelement location="../../jemmy/builds/jemmy.jar"/>                    
                <pathelement location="../../jellytools/builds/jelly2-nb.jar"/>
                <pathelement location="${xtest.home}/lib/junit.jar"/>                    
                <pathelement location="${xtest.home}/lib/nbjunit.jar"/> 
            </classpath>
        </executeTests>
    </target>
    
</project>
