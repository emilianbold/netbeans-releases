<project name="xml/tax" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="lib-init">
        <available property="do-not-generate-user-handler" classname="org.w3c.dom.UserDataHandler" />
        <mkdir dir="build/domhack/org/w3c/dom"/>
    </target>

    <!--
    Workaround for new DOM3 interfaces that are not avalable on JDK 1.4
    At runtime on JDK 1.4 we are happy because we do not call any DOM3 methods
               on JDK 1.5 we are happy because system DOM3 interfaces prevail
    -->    
    <target name="generate-user-handler" depends="lib-init" unless="do-not-generate-user-handler">
        <echo file="build/domhack/org/w3c/dom/UserDataHandler.java">
        package org.w3c.dom; public interface UserDataHandler {}
        </echo>
        <echo file="build/domhack/org/w3c/dom/TypeInfo.java">
        package org.w3c.dom; public interface TypeInfo {}
        </echo>
        <echo file="build/domhack/org/w3c/dom/DOMConfiguration.java">
        package org.w3c.dom; public interface DOMConfiguration {}
        </echo>
    </target>

    <target name="lib-compile" depends="build-init,lib-init,generate-user-handler">
        <mkdir dir="build/libclasses"/>
        <javac destdir="build/libclasses" debug="${build.compiler.debug}" debuglevel="${build.compiler.debuglevel}" deprecation="${build.compiler.deprecation}" optimize="${build.compiler.optimize}" source="${javac.source}" includeantruntime="false">
            <src path="lib/src"/>
            <src path="build/domhack"/>
            <classpath>
                <pathelement location="build/domhack"/>
                <pathelement location="${xni-impl.jar}"/>
            </classpath>
        </javac>
        <copy todir="build/libclasses">
            <fileset dir="lib/src" excludes="${jar-excludes}"/>
        </copy>
    </target>

    <target name="lib-jar" depends="lib-compile">
        <jar jarfile="${cluster}/modules/ext/org-netbeans-tax.jar" index="${build.package.index}" compress="${build.package.compress}">
            <fileset dir="build/libclasses"/>
        </jar>
    </target>

    <target name="compile" depends="lib-jar,projectized-common.compile"/>

</project>
