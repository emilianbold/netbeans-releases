<project name="xml" default="jars" basedir=".">

    <property name="xml_root" location=".."/>

    <property name="nb_root" location="${xml_root}/.."/>
    <property name="bin_root" location="${nb_root}/../nbextra"/>
    <property name="nbext_root" location="${nb_root}/nbbuild"/>

    <property name="parserimpl" value="${bin_root}/xml/tax/release/modules/ext/xerces2.jar"/> <!-- parser implementation used internally by module -->

    <property name="license.file" location="${nb_root}/nbbuild/standard-nbm-license.txt"/>
    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="storepass" value="?"/>

    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext_root}/nbantext.jar"/>
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nbext_root}/nbantext.jar"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext_root}/nbantext.jar"/>


    <target name="init">
        <tstamp/>
        <property name="buildnumber" value="${DSTAMP}-${TSTAMP}"/>
        <echo message="buildnumber = ${buildnumber}"/>
    </target>

    <target name="compile">
        <echo message="Compiling TAX library classes..."/>
        <javac srcdir="libsrc" destdir="libsrc" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath>        
                <pathelement location="${parserimpl}"/>
            </classpath>
        </javac>

        <echo message="Compiling TAX module classes..."/>
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath>        
                <fileset dir="${nb_root}/openide/netbeans/lib">
                    <include name="openide*.jar"/>
                </fileset>
                <pathelement location="libsrc"/>
            </classpath>
        </javac>
    </target>

    <target name="jars" depends="init,compile">
        <mkdir dir="netbeans/modules/ext"/>
        <jar jarfile="netbeans/modules/ext/tax.jar"
             compress="false">
            <fileset dir="libsrc" excludesfile="${nb_root}/nbbuild/standard-jar-excludes.txt"/>
        </jar>

        <mkdir dir="netbeans/modules/autoload"/>   
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <locjar jarfile="netbeans/modules/autoload/xml-tax.jar"
                manifest="manifest-subst.mf"
                compress="false">
            <fileset dir="src" excludesfile="${nb_root}/nbbuild/standard-jar-excludes.txt"/>
            <locale name="ja"/>
        </locjar>
    </target>

    <target name="release">
        <copy todir="netbeans">
            <fileset dir="${bin_root}/xml/tax/release"/>
        </copy>
    </target>

    <target name="javahelp">
    </target>

    <target name="netbeans" depends="jars,release,javahelp">
        <copy todir="../netbeans">
            <fileset dir="netbeans"/>
        </copy>
        <genlist targetname="nbm" outputfiledir="${nbext_root}/netbeans"/>
    </target>

    <target name="nbm" depends="netbeans">
        <delete dir="Info"/>
        <makenbm file="../xml-tax.nbm"
                 topdir="."
                 module="netbeans/modules/autoload/xml-tax.jar"
                 homepage="http://${homepage.base}/xml-tax.html"
                 distribution="${dist.base}/xml-tax.nbm">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="clean">
        <delete>
            <fileset dir="libsrc">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="../xml-tax.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
        <delete dir="javadoc"/>
    </target>

    <target name="all" depends="clean,nbm"/>

    <target name="javadoc">
        <delete dir="javadoc"/>
        <mkdir dir="javadoc"/>
        <property name="jdk-docs-location" value="http://java.sun.com/j2se/1.3/docs/api"/>
        <property name="xml-docs-location" value="http://xml.apache.org/apiDocs"/>
        <tstamp/>
        <javadoc destdir="javadoc"
                 packagenames="org.netbeans.tax.*"
                 windowtitle="TAX - Tree API for XML"
                 doctitle="Tree API for XML"
                 use="true"
                 splitindex="true"
                 author="false"
                 version="false"
                 maxmemory="64m">
            <sourcepath>
                <pathelement location="libsrc"/>
            </sourcepath>
            <classpath>
                <pathelement location="${parserimpl}"/>
            </classpath>
            <link href="${jdk-docs-location}"
                  offline="true"
                  packagelistLoc="${nb_root}/openide/api/doc"/>
            <link href="${xml-docs-location}"
                  offline="true"
                  packagelistLoc="${nb_root}/openide/api/doc/org/openide/xml"/>
        </javadoc>
    </target>


    <!-- This target compile all XML sub-modules. -->
    <target name="all-xml">
        <echo message="Compile all XML sub-modules ..."/>
        <ant dir=".." target="clean"/>
        <ant dir=".." target="compile"/>
    </target>


    <!-- Run tests. -->
    <target name="test">
        <ant dir="testbase" target="run"/>
    </target>

</project>
