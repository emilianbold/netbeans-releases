<project name="QA compilers" basedir="." default="all">
    
    <!-- Imports default qa-functional-compiler and runidetest executor.
        jemmy and jellytools jars are on classpath for both. -->
    <import file="../../../nbbuild/templates/xtest-qa-functional.xml"/>
    
    <property name="test.qa-functional.run.cp.extra" value="../../test/qa-lib/xml-test-lib.jar"/>

    <property name="test.qa-functional.cp.extra" value="../../test/qa-lib/xml-test-lib.jar:
            ${openide.dir}/core/openide.jar:
            ${openide/loaders.dir}/core/openide-loaders.jar:
            ${core.dir}/core/core.jar:
            ${xml/css.dir}/modules/css.jar:
            ${xml/tax.dir}/modules/autoload/ext/tax.jar:
            ${xml/api.dir}/modules/autoload/xml-api.jar:
            ${xml/tax.dir}/modules/autoload/xml-tax.jar:
	    ${openidex.dir}/modules/org-openide-src.jar:
            ${xml/catalog.dir}/modules/org-netbeans-modules-xml-catalog.jar:
            ${xml/core.dir}/modules/autoload/xml-core.jar:
            ${xml/text-edit.dir}/modules/org-netbeans-modules-xml-text.jar:
            ${xml/tools.dir}/modules/org-netbeans-modules-xml-tools.jar:
            ${openide/execution.dir}/modules/org-openide-execution.jar:
            ${editor.dir}/modules/org-netbeans-modules-editor.jar:
            ${editor.dir}/modules/org-netbeans-modules-editor-lib.jar"/>

    <!--<echo message="FFFFFFFFFFFFFFFFFFFFFFFF ${test.qa-functional.cp.extra}"/>-->
    
    <target name="qa-functional-compiler" depends="init,init-cp">
         <ant antfile="build.xml" dir="../../test" target="build-xml-lib"/>
         <buildTests srcdir="qa-functional/src" compileexcludes="**/data/**">
            <classpath refid="test.qa-functional.compile.cp"/>
        </buildTests>
    </target>
        
    <!-- Creates an empty Java project in IDE -->
    <property name="xtest.ide.create.project" value="true"/>
    <!-- Opens project at specified location -->
    <!-- <property name="xtest.ide.open.project" location="${xtest.data}/SampleProject"/> -->

</project>
