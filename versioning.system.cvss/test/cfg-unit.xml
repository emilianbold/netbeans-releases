<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->
<mconfig name="CVS Versioning Test config">

    <testbag testattribs="stable" executor="code" name="All CVS Versioning unit tests">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/modules/versioning/system/cvss/**/*Test.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <executor name="code" antfile="build-unit.xml" target="run-unit-test"/>
    <compiler name="default-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    
</mconfig>
