package o.n.m.ws.qaf.rest.crud.converter;

import java.net.URI;
import java.util.Collection;
import javax.xml.bind.annotation.XmlRootElement;
import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlTransient;
import javax.xml.bind.annotation.XmlAttribute;
import java.util.ArrayList;
import o.n.m.ws.qaf.rest.crud.Product;

/**
 *
 * @author lukas
 */

@XmlRootElement(name = "products")
public class ProductsConverter {
    private Collection<Product> entities;
    private Collection<ProductConverter> items;
    private URI uri;
    private int expandLevel;
  
    /** Creates a new instance of ProductsConverter */
    public ProductsConverter() {
    }

    /**
     * Creates a new instance of ProductsConverter.
     *
     * @param entities associated entities
     * @param uri associated uri
     * @param expandLevel indicates the number of levels the entity graph should be expanded
     */
    public ProductsConverter(Collection<Product> entities, URI uri, int expandLevel) {
        this.entities = entities;
        this.uri = uri;
        this.expandLevel = expandLevel;
        getProduct();
    }

    /**
     * Returns a collection of ProductConverter.
     *
     * @return a collection of ProductConverter
     */
    @XmlElement
    public Collection<ProductConverter> getProduct() {
        if (items == null) {
            items = new ArrayList<ProductConverter>();
        }
        if (entities != null) {
            for (Product entity : entities) {
                items.add(new ProductConverter(entity, uri, expandLevel, true));
            }
        }
        return items;
    }

    /**
     * Sets a collection of ProductConverter.
     *
     * @param a collection of ProductConverter to set
     */
    public void setProduct(Collection<ProductConverter> items) {
        this.items = items;
    }

    /**
     * Returns the URI associated with this converter.
     *
     * @return the uri
     */
    @XmlAttribute
    public URI getUri() {
        return uri;
    }

    /**
     * Returns a collection Product entities.
     *
     * @return a collection of Product entities
     */
    @XmlTransient
    public Collection<Product> getEntities() {
        entities = new ArrayList<Product>();
        if (items != null) {
            for (ProductConverter item : items) {
                entities.add(item.getEntity());
            }
        }
        return entities;
    }
}
