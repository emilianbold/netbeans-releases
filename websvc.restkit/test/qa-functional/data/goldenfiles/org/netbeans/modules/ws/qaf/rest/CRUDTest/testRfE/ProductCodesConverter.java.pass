package o.n.m.ws.qaf.rest.crud.converter;

import java.net.URI;
import java.util.Collection;
import javax.xml.bind.annotation.XmlRootElement;
import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlTransient;
import javax.xml.bind.annotation.XmlAttribute;
import java.util.ArrayList;
import o.n.m.ws.qaf.rest.crud.ProductCode;

/**
 *
 * @author lukas
 */

@XmlRootElement(name = "productCodes")
public class ProductCodesConverter {
    private Collection<ProductCode> entities;
    private Collection<ProductCodeConverter> items;
    private URI uri;
    private int expandLevel;
  
    /** Creates a new instance of ProductCodesConverter */
    public ProductCodesConverter() {
    }

    /**
     * Creates a new instance of ProductCodesConverter.
     *
     * @param entities associated entities
     * @param uri associated uri
     * @param expandLevel indicates the number of levels the entity graph should be expanded
     */
    public ProductCodesConverter(Collection<ProductCode> entities, URI uri, int expandLevel) {
        this.entities = entities;
        this.uri = uri;
        this.expandLevel = expandLevel;
        getProductCode();
    }

    /**
     * Returns a collection of ProductCodeConverter.
     *
     * @return a collection of ProductCodeConverter
     */
    @XmlElement
    public Collection<ProductCodeConverter> getProductCode() {
        if (items == null) {
            items = new ArrayList<ProductCodeConverter>();
        }
        if (entities != null) {
            for (ProductCode entity : entities) {
                items.add(new ProductCodeConverter(entity, uri, expandLevel, true));
            }
        }
        return items;
    }

    /**
     * Sets a collection of ProductCodeConverter.
     *
     * @param a collection of ProductCodeConverter to set
     */
    public void setProductCode(Collection<ProductCodeConverter> items) {
        this.items = items;
    }

    /**
     * Returns the URI associated with this converter.
     *
     * @return the uri
     */
    @XmlAttribute
    public URI getUri() {
        return uri;
    }

    /**
     * Returns a collection ProductCode entities.
     *
     * @return a collection of ProductCode entities
     */
    @XmlTransient
    public Collection<ProductCode> getEntities() {
        entities = new ArrayList<ProductCode>();
        if (items != null) {
            for (ProductCodeConverter item : items) {
                entities.add(item.getEntity());
            }
        }
        return entities;
    }
}
