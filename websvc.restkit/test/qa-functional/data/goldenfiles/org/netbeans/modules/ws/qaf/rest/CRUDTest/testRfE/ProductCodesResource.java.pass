package o.n.m.ws.qaf.rest.crud.service;

import java.util.Collection;
import javax.ws.rs.Path;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Produces;
import javax.ws.rs.Consumes;
import javax.ws.rs.PathParam;
import javax.ws.rs.QueryParam;
import javax.ws.rs.DefaultValue;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.Context;
import javax.ws.rs.core.UriInfo;
import com.sun.jersey.api.core.ResourceContext;
import javax.persistence.EntityManager;
import o.n.m.ws.qaf.rest.crud.Product;
import o.n.m.ws.qaf.rest.crud.ProductCode;
import o.n.m.ws.qaf.rest.crud.converter.ProductCodesConverter;
import o.n.m.ws.qaf.rest.crud.converter.ProductCodeConverter;

/**
 *
 * @author lukas
 */

@Path("/productCodes/")
public class ProductCodesResource {
    @Context
    protected UriInfo uriInfo;
    @Context
    protected ResourceContext resourceContext;
  
    /** Creates a new instance of ProductCodesResource */
    public ProductCodesResource() {
    }

    /**
     * Get method for retrieving a collection of ProductCode instance in XML format.
     *
     * @return an instance of ProductCodesConverter
     */
    @GET
    @Produces({"application/xml", "application/json"})
    public ProductCodesConverter get(@QueryParam("start")
    @DefaultValue("0")
    int start, @QueryParam("max")
    @DefaultValue("10")
    int max, @QueryParam("expandLevel")
    @DefaultValue("1")
    int expandLevel, @QueryParam("query")
    @DefaultValue("SELECT e FROM ProductCode e")
    String query) {
        PersistenceService persistenceSvc = PersistenceService.getInstance();
        try {
            persistenceSvc.beginTx();
            return new ProductCodesConverter(getEntities(start, max, query), uriInfo.getAbsolutePath(), expandLevel);
        } finally {
            persistenceSvc.commitTx();
            persistenceSvc.close();
        }
    }

    /**
     * Post method for creating an instance of ProductCode using XML as the input format.
     *
     * @param data an ProductCodeConverter entity that is deserialized from an XML stream
     * @return an instance of ProductCodeConverter
     */
    @POST
    @Consumes({"application/xml", "application/json"})
    public Response post(ProductCodeConverter data) {
        PersistenceService persistenceSvc = PersistenceService.getInstance();
        try {
            persistenceSvc.beginTx();
            EntityManager em = persistenceSvc.getEntityManager();
            ProductCode entity = data.resolveEntity(em);
            createEntity(data.resolveEntity(em));
            persistenceSvc.commitTx();
            return Response.created(uriInfo.getAbsolutePath().resolve(entity.getProdCode() + "/")).build();
        } finally {
            persistenceSvc.close();
        }
    }

    /**
     * Returns a dynamic instance of ProductCodeResource used for entity navigation.
     *
     * @return an instance of ProductCodeResource
     */
    @Path("{prodCode}/")
    public ProductCodeResource getProductCodeResource(@PathParam("prodCode")
    String id) {
        ProductCodeResource resource = resourceContext.getResource(ProductCodeResource.class);
        resource.setId(id);
        return resource;
    }

    /**
     * Returns all the entities associated with this resource.
     *
     * @return a collection of ProductCode instances
     */
    protected Collection<ProductCode> getEntities(int start, int max, String query) {
        EntityManager em = PersistenceService.getInstance().getEntityManager();
        return em.createQuery(query).setFirstResult(start).setMaxResults(max).getResultList();
    }

    /**
     * Persist the given entity.
     *
     * @param entity the entity to persist
     */
    protected void createEntity(ProductCode entity) {
        EntityManager em = PersistenceService.getInstance().getEntityManager();
        em.persist(entity);
        for (Product value : entity.getProductCollection()) {
            ProductCode oldEntity = value.getProductCode();
            value.setProductCode(entity);
            if (oldEntity != null) {
                oldEntity.getProductCollection().remove(entity);
            }
        }
    }
}
