package o.n.m.ws.qaf.rest.crud.converter;

import java.net.URI;
import java.util.Collection;
import javax.xml.bind.annotation.XmlRootElement;
import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlTransient;
import javax.xml.bind.annotation.XmlAttribute;
import java.util.ArrayList;
import o.n.m.ws.qaf.rest.crud.PurchaseOrder;


/**
 *
 * @author lukas
 */

@XmlRootElement(name = "purchaseOrders")
public class PurchaseOrdersConverter {
    private Collection<PurchaseOrder> entities;
    private Collection<PurchaseOrderRefConverter> references;
    private URI uri;
  
    /** Creates a new instance of PurchaseOrdersConverter */
    public PurchaseOrdersConverter() {
    }

    /**
     * Creates a new instance of PurchaseOrdersConverter.
     *
     * @param entities associated entities
     * @param uri associated uri
     */
    public PurchaseOrdersConverter(Collection<PurchaseOrder> entities, URI uri) {
        this.entities = entities;
        this.uri = uri;
    }

    /**
     * Returns a collection of PurchaseOrderRefConverter.
     *
     * @return a collection of PurchaseOrderRefConverter
     */
    @XmlElement(name = "purchaseOrderRef")
    public Collection<PurchaseOrderRefConverter> getReferences() {
        references = new ArrayList<PurchaseOrderRefConverter>();
        if (entities != null) {
            for (PurchaseOrder entity : entities) {
                references.add(new PurchaseOrderRefConverter(entity, uri, true));
            }
        }
        return references;
    }

    /**
     * Sets a collection of PurchaseOrderRefConverter.
     *
     * @param a collection of PurchaseOrderRefConverter to set
     */
    public void setReferences(Collection<PurchaseOrderRefConverter> references) {
        this.references = references;
    }

    /**
     * Returns the URI associated with this converter.
     *
     * @return the uri
     */
    @XmlAttribute(name = "uri")
    public URI getResourceUri() {
        return uri;
    }

    /**
     * Returns a collection PurchaseOrder entities.
     *
     * @return a collection of PurchaseOrder entities
     */
    @XmlTransient
    public Collection<PurchaseOrder> getEntities() {
        entities = new ArrayList<PurchaseOrder>();
        if (references != null) {
            for (PurchaseOrderRefConverter ref : references) {
                entities.add(ref.getEntity());
            }
        }
        return entities;
    }
}
