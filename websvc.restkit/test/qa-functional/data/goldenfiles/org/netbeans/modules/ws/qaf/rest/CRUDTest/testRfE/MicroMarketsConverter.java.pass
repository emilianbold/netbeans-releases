package o.n.m.ws.qaf.rest.crud.converter;

import java.net.URI;
import java.util.Collection;
import javax.xml.bind.annotation.XmlRootElement;
import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlTransient;
import javax.xml.bind.annotation.XmlAttribute;
import java.util.ArrayList;
import o.n.m.ws.qaf.rest.crud.MicroMarket;

/**
 *
 * @author lukas
 */

@XmlRootElement(name = "microMarkets")
public class MicroMarketsConverter {
    private Collection<MicroMarket> entities;
    private Collection<MicroMarketConverter> items;
    private URI uri;
    private int expandLevel;
  
    /** Creates a new instance of MicroMarketsConverter */
    public MicroMarketsConverter() {
    }

    /**
     * Creates a new instance of MicroMarketsConverter.
     *
     * @param entities associated entities
     * @param uri associated uri
     * @param expandLevel indicates the number of levels the entity graph should be expanded
     */
    public MicroMarketsConverter(Collection<MicroMarket> entities, URI uri, int expandLevel) {
        this.entities = entities;
        this.uri = uri;
        this.expandLevel = expandLevel;
        getMicroMarket();
    }

    /**
     * Returns a collection of MicroMarketConverter.
     *
     * @return a collection of MicroMarketConverter
     */
    @XmlElement
    public Collection<MicroMarketConverter> getMicroMarket() {
        if (items == null) {
            items = new ArrayList<MicroMarketConverter>();
        }
        if (entities != null) {
            for (MicroMarket entity : entities) {
                items.add(new MicroMarketConverter(entity, uri, expandLevel, true));
            }
        }
        return items;
    }

    /**
     * Sets a collection of MicroMarketConverter.
     *
     * @param a collection of MicroMarketConverter to set
     */
    public void setMicroMarket(Collection<MicroMarketConverter> items) {
        this.items = items;
    }

    /**
     * Returns the URI associated with this converter.
     *
     * @return the uri
     */
    @XmlAttribute
    public URI getUri() {
        return uri;
    }

    /**
     * Returns a collection MicroMarket entities.
     *
     * @return a collection of MicroMarket entities
     */
    @XmlTransient
    public Collection<MicroMarket> getEntities() {
        entities = new ArrayList<MicroMarket>();
        if (items != null) {
            for (MicroMarketConverter item : items) {
                entities.add(item.getEntity());
            }
        }
        return entities;
    }
}
