package o.n.m.ws.qaf.rest.crud.converter;

import java.net.URI;
import java.util.Collection;
import javax.xml.bind.annotation.XmlRootElement;
import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlTransient;
import javax.xml.bind.annotation.XmlAttribute;
import java.util.ArrayList;
import o.n.m.ws.qaf.rest.crud.PurchaseOrder;

/**
 *
 * @author lukas
 */

@XmlRootElement(name = "purchaseOrders")
public class PurchaseOrdersConverter {
    private Collection<PurchaseOrder> entities;
    private Collection<PurchaseOrderConverter> items;
    private URI uri;
    private int expandLevel;
  
    /** Creates a new instance of PurchaseOrdersConverter */
    public PurchaseOrdersConverter() {
    }

    /**
     * Creates a new instance of PurchaseOrdersConverter.
     *
     * @param entities associated entities
     * @param uri associated uri
     * @param expandLevel indicates the number of levels the entity graph should be expanded
     */
    public PurchaseOrdersConverter(Collection<PurchaseOrder> entities, URI uri, int expandLevel) {
        this.entities = entities;
        this.uri = uri;
        this.expandLevel = expandLevel;
        getPurchaseOrder();
    }

    /**
     * Returns a collection of PurchaseOrderConverter.
     *
     * @return a collection of PurchaseOrderConverter
     */
    @XmlElement
    public Collection<PurchaseOrderConverter> getPurchaseOrder() {
        if (items == null) {
            items = new ArrayList<PurchaseOrderConverter>();
        }
        if (entities != null) {
            for (PurchaseOrder entity : entities) {
                items.add(new PurchaseOrderConverter(entity, uri, expandLevel, true));
            }
        }
        return items;
    }

    /**
     * Sets a collection of PurchaseOrderConverter.
     *
     * @param a collection of PurchaseOrderConverter to set
     */
    public void setPurchaseOrder(Collection<PurchaseOrderConverter> items) {
        this.items = items;
    }

    /**
     * Returns the URI associated with this converter.
     *
     * @return the uri
     */
    @XmlAttribute
    public URI getUri() {
        return uri;
    }

    /**
     * Returns a collection PurchaseOrder entities.
     *
     * @return a collection of PurchaseOrder entities
     */
    @XmlTransient
    public Collection<PurchaseOrder> getEntities() {
        entities = new ArrayList<PurchaseOrder>();
        if (items != null) {
            for (PurchaseOrderConverter item : items) {
                entities.add(item.getEntity());
            }
        }
        return entities;
    }
}
