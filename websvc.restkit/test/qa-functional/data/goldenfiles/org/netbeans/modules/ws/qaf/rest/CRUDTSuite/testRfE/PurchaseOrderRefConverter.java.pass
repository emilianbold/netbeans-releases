package o.n.m.ws.qaf.rest.crud.converter;

import java.net.URI;
import javax.xml.bind.annotation.XmlRootElement;
import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlTransient;
import javax.xml.bind.annotation.XmlAttribute;
import o.n.m.ws.qaf.rest.crud.PurchaseOrder;


/**
 *
 * @author lukas
 */

@XmlRootElement(name = "purchaseOrderRef")
public class PurchaseOrderRefConverter {
    private PurchaseOrder entity;
    private boolean isUriExtendable;
    private URI uri;
  
    /** Creates a new instance of PurchaseOrderRefConverter */
    public PurchaseOrderRefConverter() {
    }

    /**
     * Creates a new instance of PurchaseOrderRefConverter.
     *
     * @param entity associated entity
     * @param uri associated uri
     * @param isUriExtendable indicates whether the uri can be extended
     */
    public PurchaseOrderRefConverter(PurchaseOrder entity, URI uri, boolean isUriExtendable) {
        this.entity = entity;
        this.uri = uri;
        this.isUriExtendable = isUriExtendable;
    }

    /**
     * Getter for orderNum.
     *
     * @return value for orderNum
     */
    @XmlElement
    public Integer getOrderNum() {
        return entity.getOrderNum();
    }

    /**
     * Returns the URI associated with this reference converter.
     *
     * @return the converted uri
     */
    @XmlAttribute(name = "uri")
    public URI getResourceUri() {
        if (isUriExtendable) {
            return uri.resolve(entity.getOrderNum() + "/");
        }
        return uri;
    }

    /**
     * Sets the URI for this reference converter.
     *
     */
    public void setResourceUri(URI uri) {
        this.uri = uri;
    }

    /**
     * Returns the PurchaseOrder entity.
     *
     * @return PurchaseOrder entity
     */
    @XmlTransient
    public PurchaseOrder getEntity() {
        PurchaseOrderConverter result = UriResolver.getInstance().resolve(PurchaseOrderConverter.class, uri);
        if (result != null) {
            return result.getEntity();
        }
        return null;
    }
}
