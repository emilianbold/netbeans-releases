<mconfig name="Installer tests config">

    <!-- testbag with all MyModule tests running in jvm mode (i.e. in standard JVM)
         use ant runtests -Dxtest.attribs=all,jvm to run this testbag  -->
    <testbag testattribs="all or basic" executor="installer-executor" name="installer basic bandle test">
        <testset dir=".">
            <patternset>
	        <include name="org/netbeans/test/installer/TestInstallerAndUninstallerBasic.class"/>
           </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all or standard" executor="installer-executor" name="installer standard bundle test">
        <testset dir=".">
            <patternset>
	        <include name="org/netbeans/test/installer/TestInstallerAndUninstallerStandard.class"/>
           </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all or full" executor="installer-executor" name="installer full bundle test">
        <testset dir=".">
            <patternset>
	        <include name="org/netbeans/test/installer/TestInstallerAndUninstallerFull.class"/>
           </patternset>
        </testset>
    </testbag>

    <executor name="installer-executor" antfile="build-qa-functional.xml" target="run-installer-test"/>
    
    
    <!-- compiler   - this target will compile tests -->
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>
    
</mconfig>
