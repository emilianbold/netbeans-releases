<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://www.netbeans.org/ns/project/1">
    <type>org.netbeans.modules.ant.freeform</type>
    <configuration>
        <general-data xmlns="http://www.netbeans.org/ns/freeform-project/1">
            <name>NetBeans AS Bundle Installer</name>
            <properties>
                <property-file>nbproject/private/private.properties</property-file>
                <property-file>build.properties</property-file>
            </properties>
            <folders>
                <source-folder>
                    <label>src</label>
                    <type>java</type>
                    <location>src</location>
                </source-folder>
            </folders>
            <ide-actions>
                <action name="build">
                    <target>build</target>
                </action>
                <action name="clean">
                    <target>clean</target>
                </action>
                <action name="rebuild">
                    <target>clean</target>
                    <target>build</target>
                </action>
                <action name="run">
                    <target>run</target>
                </action>
                <action name="test">
                    <target>test</target>
                </action>
            </ide-actions>
            <view>
                <items>
                    <source-file>
                        <location>build.xml</location>
                    </source-file>
                    <source-file>
                        <location>build.properties</location>
                    </source-file>                    
                    <source-file>
                        <location>ProgrammingNotes.txt</location>
                    </source-file>                    
                    <source-folder style="packages">
                        <label>src</label>
                        <location>src</location>
                    </source-folder>
                    <source-folder style="packages">
                        <label>customcode/src</label>
                        <location>customcode/src</location>
                    </source-folder>
                </items>
                <context-menu>
                    <ide-action name="build"/>
                    <ide-action name="clean"/>
                    <ide-action name="rebuild"/>
                    <ide-action name="run"/>
                    <ide-action name="test"/>
                    <action>
                        <label>Compile custom beans</label>
                        <target>compile</target>
                    </action>
                </context-menu>
            </view>
            <subprojects>
                <project>../lib</project>
            </subprojects>
        </general-data>
        <java-data xmlns="http://www.netbeans.org/ns/freeform-project-java/1">
            <compilation-unit>
                <package-root>src</package-root>
                <classpath mode="compile">${compile.classpath}</classpath>
                <source-level>1.4</source-level>
            </compilation-unit>
        </java-data>
    </configuration>
</project>
