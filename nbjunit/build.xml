<project name="xtest/nbjunit" basedir="." default="netbeans">
  <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="files-init" depends="basic-init">
        <patternset id="module.files">
            <!-- All files created for NBM -->
            <include name="${module.jar}" />
            <include name="${nb.system.dir}/Modules/${code.name.base.dashes}.xml" />
            <include name="${nb.docs.dir}/nbjunit-api.zip"/>
            <include name="${nb.modules.dir}/ext/nbjunit.jar"/>
            <include name="${nb.modules.dir}/ext/nbjunit-ide.jar"/>
            <include name="${nb.modules.dir}/ext/insanelib.jar"/>
        </patternset>
    </target>

    <target name="compile" depends="init">
        <!-- unscramble ../external/junit-3.8.1.jar and ../external/insanelib.jar used in cp.extra -->
        <ant dir="../external" target="unscramble"/>
        <copy file="../external/insanelib.jar" todir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext"/>
        <antcall target="projectized.compile"/>
    </target>
    
    <!-- Called after jar target and before module-* targets in projectized.xml -->
    <target name="netbeans-extra" depends="jar-nbjunit,javadoc">
        <copy file="javadoc/nbjunit-api.zip" todir="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}"/>
    </target>

    <target name="jar-with-module-deps" if="module.dependencies">
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" 
             compress="${build.package.compress}" 
             index="${build.package.index}" 
             manifest="${manifest.mf}">
            <manifest>
                <attribute name="OpenIDE-Module-Public-Packages" value="${public.packages}"/>
                <attribute name="OpenIDE-Module-IDE-Dependencies" value="${ide.dependencies}"/>
                <attribute name="OpenIDE-Module-Module-Dependencies" value="${module.dependencies}"/>
                <!-- XXX make this conditional so can use OIDE-M-B-V instead -->
                <attribute name="OpenIDE-Module-Implementation-Version" value="${buildnumber}"/>
            </manifest>
            <!-- includes only module resources because other classes are in library jars (target jar-nbjunit). -->
            <fileset dir="${build.classes.dir}" includes="**/resources/**"/>
        </jar>
    </target>

    <!-- build nbjunit libraries -->
    <target name="jar-nbjunit" depends="compile">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext/nbjunit.jar"
            basedir="${build.classes.dir}"
            excludesfile="../../nbbuild/standard-jar-excludes.txt"
            compress="true"
            includes="org/netbeans/junit/**"
            excludes="org/netbeans/junit/ide/**,org/netbeans/junit/resources/**"
        />
        <!-- Project support available in test cases -->
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext/nbjunit-ide.jar"
            basedir="${build.classes.dir}"
            excludesfile="../../nbbuild/standard-jar-excludes.txt"
            compress="true"
            includes="org/netbeans/junit/ide/**"
        />
    </target>
</project>
