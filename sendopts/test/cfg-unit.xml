<!--
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="core/sendopts">
    <testbag testattribs="stable" executor="code" name="unit" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="**/*Test*.class"/>
            </patternset>
        </testset>
    </testbag>


    <!-- If you want to use this testbag you *must* provide xtest.includes property, -->
    <!-- (either on cmd line or in the script) to explicitly define which test       -->
    <!-- you want to run. This will run *only* tests from unit/src folder !!!        -->
    <testbag testattribs="empty" executor="code" name="testbag_empty" resultsprocessor="unit">
        <testset dir="unit/src"/>
    </testbag>

    <!-- code excecutor - use this one if you plan to run your tests in standard 
                          JVM. You can also write your own executor, which will 
                          then call this one. It is handy when some servers (e.g. rmi registry)
                          have to be started before tests are run and stopped after
                          the run. -->
    <executor name="code" antfile="build-unit.xml" target="run-unit-test"/>
    
    <!-- ide executor - use this one if you plan to run your tests inside IDE (internally).
                        Similarly as with code executor, you can create your own to 
                        prepare some neccessary stuff before running tests. -->
    <executor name="ide" antfile="build-unit.xml" target="runidetest"/>
    
    <compiler name="unit-compiler-new" antfile="build-unit.xml" target="default-compiler" default="true"/>
</mconfig>
