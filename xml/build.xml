<project name="xml" default="netbeans" basedir=".">

  <property name="nb_root" location=".."/>
  <property name="bin_root" location="${nb_root}/../nbextra"/>
  <property name="nbext_root" location="${nb_root}/nbbuild"/>

  <taskdef  name="for-each" classname="org.netbeans.nbbuild.ForEach" classpath="${nbext_root}/nbantext.jar"/>
  <property name="submodules" value="tax, core, catalog, tools, text-edit, tree-edit, css"/>


  <target name="init">
    <tstamp/>
    <property name="buildnumber" value="${DSTAMP}-${TSTAMP}"/>
    <echo message="buildnumber = ${buildnumber}"/>
  </target>

  <target name="compile">
    <for-each locations="${submodules}"/>
  </target>

  <target name="jars" depends="init">
    <for-each locations="${submodules}"/>
  </target>

  <target name="release">
    <for-each locations="${submodules}"/>
  </target>

  <target name="javahelp">
    <for-each locations="${submodules}"/>
  </target>

  <target name="netbeans">
    <mkdir dir="netbeans"/>
    <for-each locations="${submodules}"/>
  </target>

  <target name="nbm">
    <for-each locations="${submodules}"/>
  </target>

  <target name="clean">
    <delete dir="netbeans"/>
    <for-each locations="${submodules}"/>
  </target>

  <target name="all">
    <for-each locations="${submodules}"/>
  </target>

  <target name="javadoc">
    <for-each locations="${submodules}"/>
  </target>


  <!-- Build xml module and all modules which is depend on. -->
  <target name="all-xml" depends="all-depend,clean,netbeans"/>

  <target name="all-depend">
    <property name="modules" value="../openide, ../openidex, ../core, ../editor"/>
    <for-each locations="${modules}" target="clean"/>
    <for-each locations="${modules}" target="jars"/>
  </target>


  <!-- Update www documents. -->
  <target name="www">
    <ant dir="www" target="all"/>
  </target>

</project>
