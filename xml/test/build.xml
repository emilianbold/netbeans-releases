<project basedir="." default="all" name="XML modules&apos; tests build script">

    <!-- Ant property. Value 'ignore' means that system classpath is ignored
         and only classpath specified in build file is used. -->
    <property name="build.sysclasspath" value="ignore"/>
    <property name="xtest.ide.winsys" value="sdi"/>
    <!--property name="xtest.ide.commandline.suffix" value="-J-Dtest.exit=false"/-->

    <!-- Points to directory with IDE to test-->
    <property location="../../nbbuild/netbeans" name="netbeans.home"/>
    <property location="../.." name="nb.repository"/>
    <property location="../../../nbextra" name="nbextra.repository"/>
    
    <!-- Name of tested module -->
    <property name="xtest.module" value="All_XML"/>
    
    <!-- Home of XTest -->
    <property location="../../xtest" name="xtest.home"/>
   
    <!-- default testtypes, attributes used when no value is supplied from command line -->
    <property name="xtest.testtype" value="qa-functional"/>
    <property name="xtest.attribs" value="stable"/>
    <property name="xtest.includes" value=""/>
    <property name="xtest.excludes" value=""/>   
    <!--property name="test.exit" value="false"/-->
    
    <!-- Points to antfile with module's harness. 
         Targets from that antfile is called from this build.xml -->
    <property location="${xtest.home}/lib/module_harness.xml" name="xtest.module_harness.antfile"/>

    <!-- Says how to create classpath for compilation and for execution code tests by default.
         Can have values src, jar, ide -->
    <property name="xtest.source.location" value="ide"/>

    <property name="jemmy.home" location="${nb.repository}/jemmy/builds"/>
    <property name="jelly.home" location="${nb.repository}/jellytools/builds"/>
 
    <!-- ============ -->
    <!-- Main targets -->
    <!-- ============ -->
    
    <target depends="runtests_all" name="all"/>
    
    <!-- Dummy for XTest runtime -->
    <target name="buildtests">
        <echo message="Dummy target. Run 'buildtest_all' instead."/>
    </target>
    
    <!-- Builds whole XML family together.
         This calls target which will call compilers according to cfg file.
         You should not change this target unless you realy know what you are doing -->
    <target name="buildtests_all">
       <!--ant antfile="build.xml" dir="../../../test" target="build-xml-lib"/-->
       <!-- Collect sources to all_src dir -->
       <delete dir="qa-functional/src" quiet="true"/>
       <mkdir dir="qa-functional/src"/>
       <copy todir="qa-functional/src">
            <fileset dir="qa-lib/src"/>
            <fileset dir="../catalog/test/qa-functional/src"/>
            <fileset dir="../core/test/qa-functional/src"/>
            <fileset dir="../tax/lib/test/qa-functional/src"/>
            <fileset dir="../tools/test/qa-functional/src"/>
            <fileset dir="../text-edit/test/qa-functional/src"/>
            <fileset dir="../tree-edit/test/qa-functional/src"/>
        </copy>
	<delete>
	   <fileset dir="qa-functional/src">
	      <include name="**/*.class"/>
	   </fileset>
	</delete>
        <ant antfile="${xtest.module_harness.antfile}" dir="." target="compiler-launcher"/>
    </target>
    
    <!-- This calls common clean process. -->
    <!-- You can write your own if you need something special -->
    <target name="cleantests">
       <!-- Cleans xml-lib. -->
       <!--
       <delete>
            <fileset dir="../../../test">
                <include name="**/src/**/*.class"/>
            </fileset>
       </delete>
       -->
        <echo message='Deleting "qa-functional/src"'/>
        <delete dir="qa-functional/src" quiet="true"/>
        <ant antfile="${xtest.module_harness.antfile}" dir="." target="cleantests"/>
    </target>
    
    <!-- Dummy for XTest runtime -->
    <target name="runtests" depends="buildtests">
        <echo message="Dummy target. Run 'runtests_all' instead."/>
    </target>
    
    <!-- This target runs tests. You should not change this --> 
    <!-- target unless you realy know what you are doing -->
    <target depends="buildtests_all" name="runtests_all">
        <echo message="Module: Running tests for ${xtest.module}, testtype ${xtest.testtype}, attribs=${xtest.attribs}"/>
        <ant antfile="${xtest.module_harness.antfile}" dir="." target="runtests"/>
    </target>
   
    <!-- This target is executed from test-executor in newly created Project -->
    <!-- Name of this task is defined in cfg-xxx.xml -->
    <target name="test_report">
        <ant antfile="${xtest.module_harness.antfile}" dir="." target="test_report"/>
    </target>
    
    <target name="cleanresults">
        <ant antfile="${xtest.module_harness.antfile}" dir="." target="cleanresults"/>
    </target>
    
    <target depends="cleantests,cleanresults" name="realclean">
        <ant antfile="${xtest.module_harness.antfile}" dir="." target="realclean"/>
    </target>
    
    <target name="printconfig">
        <echo message="Default config is testtype: ${xtest.testtype}, attributes: ${xtest.attribs}."/>
    </target>
    
    
    <!-- Task is use at submodules' build scripts -->
    <target name="build-xml-lib">
        <javac classpathref="xmllib.classpath" srcdir="qa-lib/src"/>
        <jar basedir="qa-lib/src" jarfile="qa-lib/xml-test-lib.jar"/>
    </target>
    
    <path id="xmllib.classpath">   
        <!-- If you need e.g. openide.jar, write this: 
             <pathelement location="${netbeans.home}/lib/openide.jar"/>
             If you need e.g. your tested module, write this:
             <pathelement location="${netbeans.home}/modules/somemodule.jar"/>
        -->
        <pathelement location="${netbeans.home}/lib/openide.jar"/>
        <pathelement location="${netbeans.home}/lib/openide-loaders.jar"/>
        <pathelement location="${netbeans.home}/lib/core.jar"/>
        <pathelement location="${netbeans.home}/modules/autoload/ext/tax.jar"/>
        <pathelement location="${netbeans.home}/modules/org-openide-src.jar"/>
        <pathelement location="${netbeans.home}/modules/org-openide-execution.jar"/>
        <pathelement location="${netbeans.home}/modules/autoload/xml-core.jar"/>
        <pathelement location="${netbeans.home}/modules/autoload/xml-tax.jar"/>	
        <pathelement location="${netbeans.home}/modules/org-netbeans-api-java.jar"/>	
         <pathelement location="${netbeans.home}/modules/css.jar"/>
        <!--
        <pathelement location="${netbeans.home}/modules/xml-catalog.jar"/>
        <pathelement location="${netbeans.home}/modules/xml-syntax.jar"/>
        <pathelement location="${netbeans.home}/modules/xml-text-edit.jar"/>
        <pathelement location="${netbeans.home}/modules/xml-tools.jar"/>
        <pathelement location="${netbeans.home}/modules/xml-tree-edit.jar"/>                      
        -->
        <pathelement location="${netbeans.home}/modules/editor.jar"/>                      
        <pathelement location="${netbeans.home}/modules/ext/nb-editor.jar"/>
        <pathelement location="${jemmy.home}/jemmy.jar"/>                    
        <pathelement location="${jelly.home}/jelly-nb.jar"/>
        <pathelement location="${jelly.home}/jelly2-nb.jar"/>
        <pathelement location="${xtest.home}/lib/junit.jar"/>                    
        <pathelement location="${xtest.home}/lib/nbjunit.jar"/>                    
        <!--pathelement location="${xtest.home}/lib/xtest.jar"/-->                    
    </path>
</project>
