<project name="xml/test" basedir="." default="all">

    <!-- Name of tested module -->
    <property name="xtest.module" value="xml"/>
 
    <!-- Imports buildtests, cleantests, runtest, cleanresults, realclean, printconfig targets. -->
    <import file="../../nbbuild/templates/xtest.xml"/>

    <!-- default testtypes, attributes used when no value is supplied from command line -->
    <property name="xtest.testtype" value="qa-functional"/>
    <property name="xtest.attribs" value="stable,ide,validation"/>
    
    <!-- Task is use at submodules' build scripts -->
    <target name="build-xml-lib">
        <path id="xmllib.classpath">
            <pathelement location="${openide.dir}/core/openide.jar"/>
            <pathelement location="${openide/loaders.dir}/core/openide-loaders.jar"/>
            <pathelement location="${core.dir}/core/core.jar"/>
            <pathelement location="${xml/tax.dir}/modules/autoload/ext/tax.jar"/>
            <pathelement location="${openidex.dir}/modules/org-openide-src.jar"/>
            <pathelement location="${openide/execution.dir}/modules/org-openide-execution.jar"/>
            <pathelement location="${xml/core.dir}/modules/org-netbeans-modules-xml-core.jar"/>
            <pathelement location="${xml/tax.dir}/modules/autoload/xml-tax.jar"/>
            <pathelement location="${java/api.dir}/modules/org-netbeans-api-java.jar"/>
            <pathelement location="${xml/css.dir}/modules/css.jar"/>
            <pathelement location="${editor.dir}/modules/editor.jar"/>
            <pathelement location="${editor.dir}/modules/editor-lib.jar"/>
            <pathelement location="../../jemmy/builds/jemmy.jar"/>                    
            <pathelement location="../../jellytools/builds/jelly-nb.jar"/>
            <pathelement location="../../jellytools/builds/jelly2-nb.jar"/>
            <pathelement location="${xtest.home}/lib/junit.jar"/>                    
            <pathelement location="${xtest.home}/lib/nbjunit.jar"/>                                   
        </path>
        <javac classpathref="xmllib.classpath" srcdir="qa-lib/src"/>
        <jar basedir="qa-lib/src" jarfile="qa-lib/xml-test-lib.jar"/>
    </target>
    
</project>
