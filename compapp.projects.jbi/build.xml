<project name="org.netbeans.modules.compapp.projects.jbi" default="netbeans" basedir=".">
    <import file="../../../nbbuild/templates/projectized.xml"/>
    
    <target name="init" depends="projectized.init">
        <ant dir="${compapp.external}" target="unzip"/>
    </target>
    
    <target name="ant-extra" depends="init">
        <mkdir dir="build/antclasses"/>
        <javac srcdir="antsrc" destdir="build/antclasses" source="1.5" debug="true" deprecation="true">
            <classpath>
                <pathelement path="${antsrc.cp}"/>
            </classpath>
        </javac>
        <copy todir="build/antclasses">
            <fileset dir="antsrc">
                <include name="**/*.xml"/>
            </fileset>
        </copy>
        <mkdir dir="${cluster}/ant/nblib/"/>
        <jar jarfile="${cluster}/ant/nblib/org-netbeans-modules-compapp-projects-jbi.jar" compress="false">
            <fileset dir="build/antclasses"/>
        </jar>
    </target>
    
    <target name="catd-extra" depends="init">
        <mkdir dir="build/catdclasses"/>
        <javac srcdir="catdsrc" destdir="build/catdclasses" source="1.5" debug="true" deprecation="true">
            <classpath>
                <pathelement path="${catdsrc.cp}"/>
            </classpath>
        </javac>
        <mkdir dir="${cluster}/modules/ext/jbi"/>
        <jar jarfile="${cluster}/modules/ext/jbi/catd.jar" compress="false">
            <fileset dir="build/catdclasses"/>
        </jar>
    </target>
    
    <target name="ext-extra" depends="init">
<!--    
        <mkdir dir="${cluster}/modules/ext/jbi"/>
        <copy todir="${cluster}/modules/ext/jbi">
            <fileset dir="${compapp.external}"
                     includes="*.jar"
                     excludes="castor-1.0.jar" />
        </copy>
-->
    </target>
    
    <target name="netbeans-extra" depends="ant-extra,catd-extra,ext-extra"/>
</project>
